<%- @meta = { :description => "#{@forum.name.capitalize} discussion forum.",:keywords => "#{@forum.tags.join(', ') if @forum.tags}",:robots => AppConfig.robots_meta_show_content} %>
<%- @section = 'forums' %>
<%- @page_title = @forum.name %>

<%-box :class => "alt first_alt" do %>
	<%= link_to :forums.l, forum_home_path %>
	
	<span class='arrow'>
		&rarr;
	</span>
	
    <%=h @forum.name %>
<% end %>

<%- box do %>
    <p class= "subtitle">
        <%= feed_icon_tag @forum.name, forum_sb_posts_path(@forum, :format => :rss) %>
        <%= = pluralize @forum.topics_count, 'topic'.l  %>
        ,
        <%= pluralize @forum.sb_posts_count, 'post'.l %>
    </p>
	
	
	<%- unless @forum.description.blank? %>
		<%= @forum.description_html %>
	<% end %>
	
	<% if @forum.moderators.any? %>
		<%= "#{:moderators.l}:" %>
		<ul class ="flat">
		<%- @forum.moderators.each do |user| %>
			<li><%= link_to user.display_name, user_path(user)%></li>
		<% end %>
		</ul>
	<% end %>
	
	<br class='clear' />

	<% if @topics.page_count > 1 %>
	
		<%- if logged_in? %>
		<h6 class='all right'>
			<%= link_to :post_a_new_topic.l, new_forum_topic_path(@forum)%>
		</h6>
		<% end %>
		
		<div class = "pagination">
			<%=  paginating_links @topics%>
		</div>
	
	<% end %>

	<%- unless @topics.empty? %>
	
	
	
    <table class="wide topics" border="0"  cellspacing="0"  cellpadding="0" >
        <tr>
            <th colspan="2" class="la"> 
                <%= :topic.l %>
            </th>
            <th width="1%">
                <%= :posts.l %>
            </th>
			<th width="1%">
                <%= :views.l %>
            </th>
			<th class="la">
                <%= :last_post.l %>
            </th>
        </tr>
		
        <%- for topic in @topics %>
        <tr>
            <td class="c1" style="padding:5px; width:16px;">
				<%- icon, color, post = icon_and_color_and_post_for topic %>
				
                <%- if recent_topic_activity(topic) %>
                	<%= image_tag "clearbits/#{icon}.gif", :class => "icon green", :title => :recent_activity.l+" #{post}" %>
                <%- else %>
                	<%= image_tag "clearbits/#{icon}.gif", :class => "icon grey #{color}", :title => :no_recent_activity.l+" #{post}" %>
                <% end %>
            </td>
			
            <td class="c2">
            	
				<%= :sticky.l+": <strong>" if topic.sticky? %>
            	<%= link_to h(topic.title), forum_topic_path(@forum, topic), :class => "entry-title", :rel => "bookmark" %>
            	<%= "</strong>" if topic.sticky? %>
            	<%- if topic.paged? %>
					<small>
						<%= link_to :last.l, forum_topic_path(:forum_id => @forum, :id => topic, :page => topic.last_page) %>
					</small>
				<% end %>	
            </td>
			
            <td class='ca inv stat'>
                <%= topic.sb_posts_count %>
            </td>
			
			<td class='ca inv stat'>
                <%= number_with_delimiter(topic.views) %>
            </td>
			
            <td class='lp'>
            	<abbr class ="updated" title = "#{topic.replied_at.xmlschema}">
            		<%= time_ago_in_words(topic.replied_at)%>
            	</abbr>
				<%= :by.l %>
				<span class ="author">
					<strong class="fn"><%=h(topic.replied_by_user.display_name)%></strong>
				</span>
				<span>
					<%= link_to :view.l, forum_topic_path(:forum_id => @forum, :id => topic, :page => topic.last_page, :anchor => "posts-#{topic.last_post_id}")%>
				</span>
        	</td>
        	</tr>
			<% end %>
    	</table>
	<% end %>
	
	<%- if @topics.page_count > 1 %>
	<div class ="pagination">
		<%= paginating_links @topics %>
	</div>
	
	<% end %> 
	
	<% if logged_in? %>
		<h6 class="all right">
			<%= link_to :post_a_new_topic.l, new_forum_topic_path(@forum)%>
		</h6>
	<% else %>
		<h6 class="all right">
			<%= link_to :log_in_to_create_a_new_topic.l, new_forum_topic_path(@forum)%>
		</h6>
	<% end %> 
	



  <% if @topics.size < 10 %>
  
    <%- @related = Post.find_tagged_with(@forum.tag_list, :limit => 10) %>
    <%- unless @related.empty? %>
	
       <table border="0"  cellspacing="0"  cellpadding="0"  class="wide topics">
        <tr>
            <th colspan="2" class="la"> 
                <%= :this_forum_is_still_getting_started.l %>
            </th>
            <th width="1%">
                <%= :comments.l %>
            </th>
			<th width="1%">
                <%= :views.l %>
            </th>
			<th class="la">
                <%= :author.l %>
            </th>
			
			<%-@related.each do |post| %>
            	<%= render :partial => 'sb_posts/dummy_forum_post', :locals => {:post => post} %>
			<% end %>
        </tr>
	  
	 <% end %>
   <% end %>

   </div>
</div>  