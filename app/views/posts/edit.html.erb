<div id="all_content3">
    <div id="col_content">
        <div id="breadcrumbs">
            <a href="<%=application_url%>">rede</a>
            > fÃ³rum > postagens > editar
        </div>
		
		<%- box :id => 'category_tips' do %>
			<%- if @post.contest %>
				<%= render :partial => "contest" %>
			<%- elsif @post.category %>
				<%= render :partial => "/categories/tips", :locals => {:category => @post.category} %>
			<%- else %>
				<%= render :partial => "/categories/tips", :locals => {:category => nil} %>
			<% end %>
		<% end %>
		
		<%- box do %>
			<label for='title'>
				<%= :editing_post.l %>
				<%= error_messages_for :post %>
			</label>
			<%- form_for(:post, :url => user_post_path(@user, @post), :html => { :method => :put, :class =>'MainForm' }) do |f| %>
				<label for='title'>
					<%= :title.l %>
						<em>
							<%= '('+:required.l+')' %>
						</em>
				</label>
				<%= f.text_field :title %>
				<label>
					<%= :category.l %>
					\:
				</label>
				<%= f.collection_select(:category_id, Category.find(:all), :id, :name, {}, {}) %>
				<label>
					<%= :body_text.l %>
						<em>
							<%= '('+:required.l+')' %>
						</em>
				</label>
				<%= f.text_area :raw_post, :size => "86x15" %>
				<label>
					<%= :tags.l %>
					<%= "(#{:optional_keywords_describing_this_post_separated_by_commas.l})" %>
				</label>
				<%= text_field_tag 'tag_list', @post.tag_list, {:autocomplete => "off", :size => 35} %>
				<%= auto_complete_field 'tag_list', {:url => { :controller => "tags", :action => 'auto_complete_for_tag_name'}, :tokens => [','] } %>
				<label>
					<%= :save_post_as.l %>
				</label>
				<%= f.select(:published_as, [[:published.l, 'live'], [:draft.l, 'draft']]) %>
				<p>= observe_field  "post_category_id", {:url => {:action => 'category_tips_update'}, :with => "post_category_id", :update => "category_tips", :complete => visual_effect(:highlight, "category_tips", :duration => 0.5)}
					<%= submit_tag :update.l %>
					<%= :or.l %>
					<%= link_to :cancel.l, user_post_path(current_user, @post) %>
				</p>
				<%= link_to "#{image_tag 'icons/delete.png'}" + :delete_this_post.l, user_post_path(current_user, @post), :method => :delete, :confirm => :are_you_sure_you_want_to_delete_this_post.l %>
			
			<% end %>
		<% end %>
		<%= observe_field  "post_category_id", {:url => {:action => 'category_tips_update'}, :with => "post_category_id", :update => "category_tips", :complete => visual_effect(:highlight, "category_tips", :duration => 0.5)} %>
		
	</div>
</div>		
