<div id="all_content3">
    <div id="col_content">
        <div id="breadcrumbs">
            <a href="<%=application_url%>">rede</a>
            > fÃ³rum > postagens
        </div>
		
		<%= render :partial => 'author_profile', :locals => {:user => @user} %>
		<%- unless @popular_posts.empty? %>
			<%- box :id => "posts", :class => 'alt' do %>
				<label for='title'>
					<%= :popular_posts.l %>
				</label>
				<ul>
					<%- @popular_posts.each do |post| %>
						<li>
							<%= link_to truncate(post.title, :length => 75), user_post_path(@user, post) %>
						</li>
					<% end %>
				</ul>
			<% end %>
		<% end %>
		
		<%- box :class => "posts hfeed" do %>
			<label>
				<%= link_to :users_blog.l(:user => @user.login), user_posts_path(@user) %>
				<%= @category ? "&raquo; " + link_to(@category.name.upcase, users_posts_in_category_path(@user, @category.name)) : '' %>
			</label>
			<%= link_to( :new_post.l, new_user_post_path(@user), {:class => "right"})  if @is_current_user %>
			<br/>
			<%= render :partial => 'post', :collection => @posts %>
			<%= paginating_links @posts if @posts.page_count > 1 %>
			
		<% end %>
		
	</div>
</div>	