<% box :class => 'alt first_alt' do %>
	<label for='title'>
		<%= :author.l %>
	</label>
	<dl>
		<dt>
			<%= link_to image_tag( user.avatar.url(:thumb), "height"=>"50", "alt"=>"#{user.login}", "width"=>"50" ), user_path(user), :title => "#{user.login}'s"+ :profile.l %>
		</dt>
		<dd>
			<%= link_to user.login, user_path(user), :class => 'url' %>
			<%= " <small>(" + :featured_writer.l + ")</small>" if user.featured_writer?  %>
		</dd>
		<dd>
			<% if user.description %>
				<%= truncate_words( user.description, 12, '...') %>
			<% end %>
		</dd>
		<dd>
			<%= user.created_at.strftime(:member_since.l + ": %m/%d/%y") %>
		</dd>
		<dd>
			<% if user.posts.count == 1 %>
				<%= link_to :singular_posts.l(:count => user.posts.count), user_posts_path(user) %>
			<% else %>
				<%= link_to :plural_posts.l(:count => user.posts.count), user_posts_path(user) %>
			<% end %>
			
		</dd>
		<dd>
			<%= link_to :rss_feed.l, user_posts_path(user, :format => :rss) %>
		</dd>
	</dl>
<% end %>
