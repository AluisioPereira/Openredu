<div id="all_content3">
    <div id="col_content">
        <div id="breadcrumbs">
            <a href="<%=application_url%>">rede</a>
            > fÃ³rum > postagens > popular
        </div>
		<div class='box_forum'>

		<%- @meta = { :description => :popular_posts_on.l+" #{AppConfig.community_name}",:keywords => "#{AppConfig.meta_keywords}", :robots => AppConfig.robots_meta_list_content} %>
		<%- @section = 'popular' %>
		<%-box do %>
			<%- if logged_in? %>
				<label for='title'>
					<%= :get_popular.l %>
				</label>
				<ul>
					<li>
						<%= link_to :write_a_blog_post.l, new_user_post_path({:user_id => current_user}) %>
					</li>
				</ul>
			<%- else %>
				<label for='title'>
					<%= :want_to_be_popular.l %>
				</label>
				<li>
					<a>
						<%= :sign_up_for_an_account.l %>
					</a>
				</li>
				<br/>
				<small>
					<%= :have_an_account.l %>
					<a>
						<%= :log_in.l %>
					</a>
				</small>
			<% end %>
		<% end %>
		<%- box :class => "alt" do %>
			<label for='title'>
				<%= :this_month_best.l %>
			</label>
			<ul>
				<%- @monthly_popular_posts.each do |post| %>
					<%= render :partial => 'posts/sidebar_post', :locals => {:post => post} %>
				<% end %>
			</ul>
		<% end %>
		<%-box :class => "hfeed" do %>
			<label for='username'>
				<%= :what_is_popular.l %>
				<ul>
					<li>
						<%= :looking_for_most_x.l :link => link_to("#{:recent.l}?", recent_path) %>
					</li>
				</ul>
				<%= render :partial => 'posts/post', :collection => @posts%>
			</label>
			
		<% end %>
		
		</div>
	</div>
</div>		