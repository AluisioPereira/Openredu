<div> <!--Observar argumentos dentro da div -->
	<%= link_to image_tag( (post.image_for_excerpt), {:style=>"width:200px"} ), user_post_path(post.user, post) %>
	<p>
		<strong>
			<%= link_to post.title, user_post_path(post.user, post) %>
		</strong>
		<br/>
		<small>
			<%= link_to :by.l+" #{post.user.login}", user_path(post.user) %>
		</small>
		<br/>
		<%= truncate_words(post.post, 7, '...' ) %>
		<%= link_to( '<small>&raquo;'+:more.l+'</small>', user_post_path(post.user, post)) %>
	</p> 
	<!--<%= render :partial => 'posts/meta', :locals => {:post => post} %>-->
</div>