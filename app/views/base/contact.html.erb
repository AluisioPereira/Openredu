<%- form_for @contact, :url => {:action => :contact} do |f| %>
	<fieldset>
		<legend>Contato</legend>
		<%= f.error_messages %>
		
		<%= f.label :name, "Seu nome" %>
		<%= f.text_field :name %>
		
		<%= f.label :email, "Seu e-mail" %>
		<%= f.text_field :email %>
		
		<%= f.label :kind, "Você quer nos enviar uma" %>
		<%= f.select :kind, options_for_select([["Dúvida"], ["Parceria"], ["Sugestão"]])%>
		
		<%= f.label :subject, "Assunto" %>
		<%= f.text_field :subject %>
		
		<%= f.label :body, "Mensagem" %>
		<%= f.text_area :body %>
		
		<%= f.submit "Enviar"%>
	</fieldset>
<% end %>