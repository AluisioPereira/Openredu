<%= form_for @contact, :remote => remote ||= false, :html => {:class => css_class ||= 'concave-form omega', :id => id ||= ''}, :url => contact_path do |f| %>
  <fieldset>
    <%= concave_error_messages_for f.object %>
    <%= f.label :name, 'Nome:' %>
    <%= f.text_field :name, :placeholder =>'Digite o seu nome' %>
    <%= concave_errors_for f.object, :name %>
    <%= f.label :email, 'E-mail:' %>
    <%= f.text_field :email, :id => 'email', :placeholder =>'Digite o seu e-mail para contato (talvez tenhamos algo a lhe perguntar)' %>
    <%= concave_errors_for f.object, :email %>
    <%= f.label :body, 'Mensagem:' %>
    <%= f.text_area :body, :placeholder =>'Detalhe a situação que lhe levou a achar este erro, bem como o que fazia antes desta mensagem aparecer.' %>
    <%= concave_errors_for f.object, :body %>
    <%= f.submit 'Enviar' %>
  </fieldset>
<% end %>
