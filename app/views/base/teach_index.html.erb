<ul class="grid_16 sortable calls headlines">
	
	<li class="clearfix grid_5 personal-overview">
		<span class="call">
			<span>Meu Perfil</span>
			<span class="option" id="">Opções</span>
			<ul class="options">
				<li><a href="">Nova aula</a></li>
				<li><a href="">Outra opçao</a></li>
				<li><a href="">Outra opçao</a></li>
			</ul>
		</span>
		  <%=  link_to image_tag( current_user.avatar_photo_url(:thumb), 
                    {:class=> "photo", :border => 0 }), current_user   %> 
		<%= link_to current_user.display_name, current_user, :class => "name" %>
		<%= link_to "Editar", edit_user_path(current_user), :class => "edit" %>
		<!-- <a href="" class="plan">PRO</a> -->
	</li>	
	
	<li class="clearfix grid_5 students-overview">
		<span class="call">
			<span>Meus alunos</span>
			<span class="option" id="">Opções</span>
			<ul class="options">
				<li><a href="">Nova aula</a></li>
				<li><a href="">Outra opçao</a></li>
				<li><a href="">Outra opçao</a></li>
			</ul>
		</span>
		<ul>
			<li class="clearfix">
				<img src="/images/thumb.gif" alt="" class="photo" /><a href="" class="name">Guilherme</a>
				<a href="" class="info">Redu</a>
			</li>
			<li class="clearfix">
				<img src="/images/thumb.gif" alt="" class="photo" /><a href=""  class="name">Cassio</a>
				<a href="" class="info">Colégio de Aplicaçãp</a>
			</li>
			<li class="clearfix">
				<img src="/images/thumb.gif" alt="" class="photo" /><a href=""  class="name">André</a>
				<a href="" class="info">CIn</a>
			</li>
		</ul>
	</li>
	
	<li class="clearfix grid_5 lectures-overview">
		<span class="call">
			<span>Minhas aulas (<%= current_user.courses.count%>)</span>
		</span>
		<% if current_user.courses.size > 0 %>
		<ul>
			<%# TODO performance %>
			<% for course in current_user.courses[0..4] do%>
			<li class="clearfix">
				 <%=  link_to image_tag( course.thumb_url, 
                    {:class=> "photo", :border => 0 }), course   %> 
				<%= link_to course.name, course, :class => "name" %>
			</li>
			<% end %>
			<li class="clearfix">
				<%= link_to "(ver todos)", user_courses_path(current_user), :class => "info" %>
			</li>
		</ul>
		<% else %>
		Você não possui aulas ainda. Crie uma <%= link_to "agora!", new_course_path %>
		<% end %>
	</li>


	<!--
	<li class="clearfix grid_5 statistics">
		<span class="call"><span>Estatísticas</span></span>
