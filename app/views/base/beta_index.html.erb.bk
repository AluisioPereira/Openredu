    <div id="signin_menu">
        <div id="signin_form">
            <form action="" id="signin" method="post">
              <label for="username">Email</label>
              <input tabindex="4" title="username" value="cassio.ufpe@gmail.com" name="username" id="username" type="text">
            <p>
              <label for="password">Password</label>
              <input tabindex="5" title="password" value="" name="password" id="password" type="password">
            </p>
            <p class="remember">
                <input tabindex="6" value="Sign in" id="signin_submit" type="submit">
                <input tabindex="7" value="1" name="remember_me" id="remember" type="checkbox">
                <label for="remember">Remember Me</label>
            </p>
              <a id="resend_password_link" href="#">Forgot your password?</a>
            <p id="alert">The e-mail address or password is incorrect.</p>
            </form>
        </div> <!-- end signinform -->
        <div id="lostPassword" style="display: none;">
            <div><strong>Recover your password</strong></div>
