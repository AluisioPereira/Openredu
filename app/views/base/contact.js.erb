var $form = $("#contact_form");
<% if @contact.valid? %>
  var $confirmation_box = $("<%= escape_javascript render 'shared/confirmation_message', :message => %(<span class="thank-you">Obrigado, <span class="person-name">#{@contact.name}</span></span> <p class="text-confirmation"> Sua ajuda foi muito importante para nós. Visite a <span class="initial-page"> #{link_to "página inicial", home_path} </span>para recomeçar a navegar no Redu</p>) %>");
  $form.replaceWith($confirmation_box);
<% else %>
  var contact_form = "<%= escape_javascript render :partial => 'base/contact_form', :locals => { :remote => true, :css_class => 'concave-form call-us grid_9 alfa', :id => 'contact_form' } %>"
  $("#contact_form").replaceWith(contact_form);
<% end %>
