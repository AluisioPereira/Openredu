<div class="form-login">
    <%= form_for @user_session,  :url => sessions_path , :html => { :class => "user-dates", :id => "form-login" } do |f| %>
      <div class="control-group">
        <div class="control-label">
          <%= f.label :login,"Login" %>
        </div>
        <div class="controls">
          <%= f.text_field :login, :placeholder =>'Seu login ou e-mail cadastrado' %>
          <%= concave_errors_for @user, :login %>
        </div>
      </div>
      <div class="control-group">
        <div class="control-label">
          <%= f.label :password, "Senha" %>
        </div>
        <div class="controls">
          <%= f.password_field :password, :placeholder =>'Sua senha' %>
          <%= concave_errors_for @user, :password %>
        </div>
      </div>
      <%= f.submit 'Enviar', :class => 'button-primary' %>
      <div class="control-group">
        <div class="controls">
          <%= field_set_tag " ", :class => 'control-checkbox' do %>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Matenha-me conectado" %>
          <% end %>
          </div>
        </div>
    <% end %>
    <hr>
    <div class="fb-login">
      <%= link_to "Entre com sua conta do Facebook", facebook_authentication_path, :value => "login-facebook", :class => "uibutton confirm large" %>
      </div>
    <hr>
    <div class="recover-login">
      <%= link_to "Esqueceu seu login ou senha? Clique aqui", recover_username_password_path %>
    </div>
  </div>
