<li class="clearfix">
  <%= link_to exam.name, space_subject_exam_path(exam.subject.space, exam.subject,
                                                 exam), :class => "name"  %>
  <div class="headlines exam" style="width: 490px">
    <!--
    <span class="call">Descrição:</span>
    -->
    <span class="things">
      <%= truncate_words( exam.description, 10, '...') %>

    </span>
  </div>
  <div class="headlines average upper">
    95%
  </div>


  <%= link_to("Responder!", answer_space_subject_exam_path(@space, @subject, exam, :first=> true), :class => "answer") unless @user%>

  <div class="headlines exam" style="width: 490px">


    <ul class="item_info">
      <% unless @user %>
        <li> Por 
          <%= link_to exam.owner.f_name, user_path(exam.owner) %>
        </li>
        <li>
          |
        </li>
      <%end%>
      <li> 
        <%= time_ago_in_words_or_date(exam.created_at) %>
      </li>
      <li>
        |
      </li>
      <li>
        Realizações (<%= exam.done_count %>)
      </li>
      <li>
        |
      </li>
      <li>
        Questões (<%= exam.questions.size %>)
      </li>
      <li>
        |
      </li>
      <li>
        Nível <%= exam_level(exam) %>
    </li>

  </ul>
</div>
<div class="headlines average bottom">
  Média
</div>


      </li> 

