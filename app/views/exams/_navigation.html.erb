  <%= button_to_remote('Anterior', {:url => {:action => :answer, :id => session[:exam].id, :q_index => (session[:question_index] - 1)}, :loading => "showLoading();", :with => "addQuestionParams(#{@step.id})"}, :id => 'prev_answer_btn') %>
<% end %>

