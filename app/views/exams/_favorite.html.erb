<% if favorite.favoritable_type.eql?("Exam") %>
<% exam = Exam.find(favorite.favoritable_id) %>    
	    <div id="item">
    		<div id="title"><%= link_to exam.name, exam %></div>
            <div id="average">
            	<div id="title_average" align="center">MÉDIA</div>
                <div id="number_average" align="center">88%</div>
                <div id="title_average" align="center">Realizações(<%=h exam.done_count %>)</div>
                <div id="difficulty_level" align="center"><%=h (exam.level == 1) ? "Iniciante" : ((exam.level == 2) ? "Intermediário" : "Avançado") %></div>
            </div> 
            <div id="identification">
              <ul id="identification_resource">
				<li><%= link_to exam.owner.login, exam.owner %></li>
        		<li>|</li>
				<li><%= time_ago_in_words(exam.created_at) %></li>
                <li>|</li>
				<li><%=h exam.questions.length %> Questões</li>
			  </ul>
            </div>
            
            <div id="description"><%= (exam.description[0..250] + "...") if exam.description.length > 250 %>
            </div>
			
			<div id="identification">
              <ul id="identification_resource">
				<li><strong>Categoria:</strong> Matemática</li>
        		<li>|</li>
				<li><strong>Tags:</strong> <%=h exam.tag_list %></li>
			  </ul>
            </div>
            
            <div id="actions">
              <ul id="actions_resource">
				<li><a href="#" class="share">Compartilhar</a></li>
        		<li>|</li>
				<li><a href="#" class="download">Download</a></li>
                <li>|</li>
				<li><a href="#" class="comments">Comentários(<%= exam.comments.count %>)</a></li>
			  </ul>
            </div>           
    	</div>
<% end %>		
