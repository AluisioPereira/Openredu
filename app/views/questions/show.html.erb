<%= render :partial => 'lectures/javascripts' %>
<%= render :partial => 'subjects/sidebar' %>
<div class="main space grid_12 omega big-col">
  <%= render :partial => "subjects/breadcrumbs", :locals => { :subject => @subject } %>
  <%= render :partial => 'subjects/header',
    :locals => { :subject => @subject, :space => @space } %>

  <div id="resource" class="hierarchy-listing-wrapper">
    <div class="resource-head">
      <%= render :partial => 'lectures/info',
        :locals => { :lecture => @lecture } %>
      <%= render :partial => 'lectures/context',
        :locals => { :student_grade => @student_grade, :done => @done } %>
    </div>

    <div class="resource-content clearfix">
      <%= render :partial => 'lectures/details',
        :locals => { :lecture => @lecture} %>
      <div class="stage exercise">
        <% if @question %>
          <% # Forms para submissão do choice da questão %>
          <%= form_for :choice, :url => exercise_question_choices_path(@exercise, @question),
            :method => :post do |f| %>
            <%= render "questions/navigation",
              :exercise => @exercise, :current => @question,
              :first => @first_question, :last => @last_question,
              :review => @review %>
            <%= render "questions/form", :f => f, :exercise => @exercise,
              :question => @question, :result => @result, :review => @review,
              :choice => @choice %>
            <%= render "questions/submission", :question => @question,
              :first => @first_question, :last => @last_question, :review => @review %>
          <% end %>
        <% else %>
          <% # Depois de clicar em "finalizar" %>
          <%= form_for :choice, :url => exercise_question_choices_path(@exercise, @last_question),
            :method => :post do |f| %>
            <%= render"questions/navigation",
              :exercise => @exercise, :current => @last_question,
              :first => @first_question, :last => @last_question, :review => @review %>
          <% end %>

          <% # Form para submissão do exercício %>
          <%= form_tag exercise_result_path(@exercise, @result),
            :method => :put, :class => "exercise-finalize-form" do %>
            <span class="exercise-call">Exercício finalizado.</span>
            <span class="exercise-call">Você pode revisar as questões ou submeter a aula. </span>
            <button type="submit" class="concave-button">
              <span class="do-exercise icon-exercise-white_16_18-before">Submeter</span>
            </button>
          <% end %>
        <% end %>
      </div>
    </div>

  </div><!-- end #resource -->

</div><!-- end .main -->

