
<script type="text/javascript">
var examsFavoritesPath = "<%= user_favorites_path(:type => :exams)  %>";
var statusesFavoritesPath = "<%= user_favorites_path(:type => :statuses) %>";

var $usertabs;

$(document).ready(function() {

    $usertabs = $(".user-tabs").tabs({
        select: function(event, ui) {
           if (ui.index == 2) {
                // Status
                $("#tabs-3-content").html('');
                jQuery.ajax({
                    data: '',
                    dataType: 'script',
                    success: function(request) {
                        $("#tabs-3-loading").hide();
                    },
                    type: 'get',
                    url: statusesFavoritesPath
                });

                $("#tabs-3-loading").show();
            }
            else if (ui.index == 1) {
                // Exams
                $("#tabs-2-content").html('');
                jQuery.ajax({
                    data: '',
                    dataType: 'script',
                    success: function(request) {
                        $("#tabs-2-loading").hide();
                    },
                    type: 'get',
                    url: examsFavoritesPath
                });

                $("#tabs-2-loading").show();
            }
        }
    });
});
</script>


