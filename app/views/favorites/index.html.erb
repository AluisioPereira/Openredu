  <!-- Status -->
  <div id="tabs-3">
    <%=  image_tag 'loadingAnimation.gif', :id=> 'tabs-3-loading', :style => 'padding: 20px;'%>
    <div id="tabs-3-content"></div>
  </div>

</div><!-- end tabs -->

</div><!-- end main -->

