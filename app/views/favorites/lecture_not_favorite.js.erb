var link = "#favorites_link"
var new_link = "<%= escape_javascript(
  link_to 'Favoritar',
  favorite_user_favorite_path(current_user,
                             @favorite.favoritable,
                             :id => @favorite.favoritable.id,
                             :type => @favorite.favoritable.class.to_s),
  :remote => true, :method => :post,
  :id => 'favorites_link') %>"

$('#favorite').after(new_link);
$('#rm_favorites_link').remove();
$(link).show();
