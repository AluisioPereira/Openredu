<%= form_for @user_session, :remote => true, :url => sessions_path, :html => { :class => "user-dates landing-sign-in-form", :id => "form-login" } do |f| %>
  <div class="control-group">
    <div class="control-label">
      <%= f.label :login, "Login" %>
    </div>
    <div class="controls">
      <%= f.text_field :login, :placeholder => "Seu login ou e-mail cadastrado" %>
      <%= concave_errors_for @user_session, :login %>
    </div>
  </div>
  <div class="control-group">
    <div class="control-label">
      <%= f.label :password, "Senha" %>
    </div>
    <div class="controls">
      <%= f.password_field :password, :placeholder =>"Sua senha" %>
      <%= concave_errors_for @user_session, :password %>
    </div>
  </div>
  <div class="landing-sign-in-form-submit">
    <div class="control-group pull-left">
      <div class="controls">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Matenha-me conectado", :class => "legend" %>
      </div>
    </div>
    <%= f.submit "Enviar", :class => "button-primary pull-right" %>
  </div>
<% end %>
<hr class="line-gray3">
<div class="landing-facebook-sign-in">
  <%= link_to "Entre com sua conta do Facebook", facebook_authentication_path, :value => "login-facebook", :class => "uibutton confirm" %>
</div>
<hr class="line-gray3">
<div class="landing-sign-in-recover">
  <%= link_to "Esqueceu seu login ou senha? Clique aqui", recover_username_password_path, :class => "link-secondary" %>
</div>
