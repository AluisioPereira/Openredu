<li class="clearfix">
	 <%= link_to course.name, (@space) ? course_path(:id => course.id, :space_id => @space.id) : course, :class => "name"  %>
	<div class="thumb photo"><%= link_to(image_tag course.thumb_url, :width => "70px") %></div>
	<div class="headlines" style="width: 490px">
		<!--
		<span class="call">Descrição:</span>
		-->
		<span class="things">
		<%= truncate_words( course.description, 10, '...') %>
		
		
		</span>
	</div>
	<div class="headlines" style="width: 490px">
		
		
		<ul class="item_info">
            <% unless @user %>
						<li> Por 
                <%= link_to course.owner.f_name, user_path(course.owner) %>
            </li>
            <li>
                |
            </li>
						<%end%>
            <li> 
                <%= time_ago_in_words_or_date(course.created_at) %>
            </li>
            <% if course.space && !@space%>
						<li>
                |
            </li>
						 <li> 
                Rede: <%= link_to(course.space.name, course.space)  %>
            </li>
						<%end%>
            <li>
                |
            </li>
            <li>
                Exibições (<%= course.view_count %>)
            </li>
						<li>
                |
            </li>
						
        </ul>
				
		<span style="float: left; margin-top:2px;">
			 							<%= ratings_for course, :static, :small => true, :wrap => false %>
		</span>
		
		
	</div>
</li> 




