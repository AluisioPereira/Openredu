
 
<div id="player">
	Você precisa instalar o <%= link_to 'Flash Player', 'http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash' %> para ver este vídeo.</div>
	<script type="text/javascript">
	var so = new SWFObject('/flash/player.swf', 'mpl', '480', '360', '8');

	so.addParam('allowscriptaccess', 'always');
	so.addParam('wmode', 'transparent');
	so.addVariable('height', '20');
	so.addVariable('width', '480');
	so.addVariable('provider', 'sound');
	so.addVariable('file', encodeURIComponent('<%= @resource.media.url %>'));
	so.write('player');
</script>
</div>


