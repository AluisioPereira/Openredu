<%= stylesheet_link_tag 'uploadify' %>
<%= render_uploadify(:id  => "document_attachment",
                     :url => space_subject_lectures_url(@space, @subject),
                     :allow_multiple_files => false,
                     :fields => ['document_attachment', 'name'],
                     :allowed_extensions => [:ppt, :pptx, :pdf, :odp, :pps]) %>
 <% form_for :document, @document, :url => { :action => "create" },
   :html => { :multipart => true, :method => :put,
              :id => "document-form"} do |f| %>

   <%= f.error_messages %>
   <% field_set_tag 'Documento' do %>
     <%= label_tag :name, :title.l %>
     <%= text_field_tag :name %>
     <%= error_for :name %>
     <div id="upload_resource_field" >
       <%= f.label :attachment, "Arquivo do seu computador (máximo: 100MB)" %>
       <%= f.file_field :attachment  %>
       <%= error_for :document, :attachment %>

       <%= uploadify_cancel("Parar") %>
       <%= uploadify_submit "Enviar material", :style => "margin: 10px 0; float: left; width: 120px; text-align: center; display: none;"  %>
       <%= link_to_function "Cancelar",
         "$('#document-form').remove(); $('#add_link').show(); return false;" %>
     </div>
     <% unless @document.new_record? %>
       <div class="box_notice">Você já inseriu o arquivo <%= @document.attachment_file_name %></div>
     <% end %>
   <% end %>
 <% end %>
