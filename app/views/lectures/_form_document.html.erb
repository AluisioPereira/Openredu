<div id="lecture_form">
  <%= form_for @document, :as => :document, :url => space_subject_lectures_path,
    :html => { :id => "document-form", :class => "form-common",
               :multipart => true }, :remote => true do |f| %>
   <%= f.error_messages %>
   <%= field_set_tag do %>
     <%= label_tag :name, t(:title) %>
     <%= text_field_tag :name %>
     <%= error_for :name %>
     <%= f.label :attachment, "Arquivo" %>
     <div id="upload_resource_field">
       <%= f.file_field :attachment  %>
       <span class="tip">Tamanho m√°ximo: 100 mb</span>
       <%= error_for :document, :attachment %>

       <%= f.submit "Criar" %>
       <%= link_to_function "Cancelar",
         "$('#document-form').remove(); return false;",
         :class => "cancel vanilla"%>
     </div>
   <% end %>
 <% end %>
</div>
