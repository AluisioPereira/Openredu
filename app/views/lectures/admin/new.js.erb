$('.new-resource .resource-form').remove();
var $form;
<% if params[:type] == "Existent" %>
  $form = $("<%= escape_javascript(render 'lectures/admin/form_existent', :space => @space, :subject => @subject, :lecture => @lecture) %>");
<% else %>
  $form = $("<%= escape_javascript(render 'lectures/admin/form', :space => @space, :subject => @subject, :lecture => @lecture) %>");
<% end %>

$form.appendTo($('#lectures_types')).slideDown();
$form.refreshNestedFields();
$form.find(".alternative-item").refreshAlternativesNumbering();
$("#space-manage #resources_list").refreshResourcesNumbering();
