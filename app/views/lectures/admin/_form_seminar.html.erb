<div id="lecture_form">
  <%= form_for seminar, :as => :seminar,
    :url => space_subject_lectures_path,
    :remote => true,
    :html => { :id => "seminar-form", :class => "concave-form",
               :multipart => true } do |f| %>

      <%= label_tag :name, t( :title ) %>
      <%= text_field_tag :name, nil, :class => "yt-title" %>
      <%= hidden_field_tag "subject_id", @subject.id %>
      <span class="tip">Nome da aula</span>
      <%= concave_errors_for(@lecture, :name) %>

      <%= label_tag "Tipo" %>
      <ul class="seminar-types single-column">
        <li>
          <%= f.radio_button :external_resource_type, :youtube,
            {:checked => true} %>
          <%= f.label :external_resource_type_youtube, "Youtube" %>
          <span class="question question-blue_12_12 tiptip-right" title="Você pode utilizar vídeos públicos do YouTube dentro dos seu módulo do Redu, basta copiar o endereço do vídeo."></span>
        </li>
        <li>
          <%= f.radio_button :external_resource_type, :upload %>
          <%= f.label :external_resource_type_upload, "Upload" %>
          <span class="question question-blue_12_12 tiptip-right" title="Envie um vídeo do seu computador caso queria mantê-lo privado. Assim somente seus alunos no Redu terão acesso."></span>
        </li>
      </ul>
      <%= concave_errors_for(f.object, :external_resource_type) %>
      <%= concave_errors_for(f.object, :external_resource_type_upload) %>

      <% showup = (!seminar.errors[:original].empty? or (!@lecture.errors[:name].empty? and seminar.errors[:external_resource].empty?)) %>
      <div id="upload_resource_field" class="seminar-field" style="<%= showup ? 'display: block;' : 'display: none;' %>">
        <%= f.label :original, "Upload" %>
        <%= f.file_field :original  %>
        <%= concave_errors_for(f.object, :original) %>
      </div>

      <div id ="external_resource_field" class="seminar-field" style="<%= showup ?  'display: none;' : 'display: block;' %>">
        <%= f.label :external_resource, "URL" %>
        <%= f.text_field :external_resource %>
        <span class="tip">Endereço do vídeo no Youtube</span>
        <%= concave_errors_for(f.object, :external_resource) %>
      </div>

      <div id="youtube_preview" class="clearfix" style="<%= showup ?  'display: none;' : 'display: block;' %>">
        <%= label_tag "Prévia" %>
      </div>
      <%= f.submit %>
      <%= link_to "Cancelar", "#", :class => 'concave-clean cancel-lecture' %>
  <% end %>
</div>
