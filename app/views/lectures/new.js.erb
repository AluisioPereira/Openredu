$('#lecture_form').remove();
<% case params[:type].to_s %>
<% when 'Page' %>
  var $form = $("<%= escape_javascript(render :partial => 'lectures/form_page') %>");
<% when 'Seminar' %>
  var $form = $("<%= escape_javascript(render :partial => 'lectures/form_seminar') %>")
<% when 'Document' %>
  var $form = $("<%= escape_javascript(render :partial => 'lectures/form_document') %>")
<% when 'Existent' %>
  var $form = $("<%= escape_javascript(render :partial => 'lectures/form_existent') %>")
<% end %>

$('#lectures_types').after($form);
