<% form_remote_for :page, @page,
  :url => space_subject_lecture_path(@space, @subject, @page.lecture),
  :method => :put,
  :html => { :id => "page_form" },
  :before => "for (instance in CKEDITOR.instances){
            CKEDITOR.instances[instance].updateElement();}" do |f| %>
  <%= render :partial => 'page_fields', :locals => { :f => f }%>
<% end %>
