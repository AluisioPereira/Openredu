var $item_short = $("<%= escape_javascript(render :partial => 'lectures/item_short', :locals => { :item_short => @lecture }) %>");
$('#resources_list').append($item_short);

<% if @lecture.is_clone %>
  $('#existent-form').remove();
<% else %>
  <% case @lecture.lectureable.class.to_s %>
  <% when "Page" %>
    $('#page_form').remove();
  <% when "Seminar" %>
    $('#seminar-form').remove();
  <% when "Document" %>
    $('#document-form').remove();
  <% end %>
<% end %>
