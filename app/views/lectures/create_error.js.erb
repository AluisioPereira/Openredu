<%= remotipart_response do %>
  <% if @page %>
    $('#page_body-error').html("<%= @page.errors[:body].join(",") %>");
    $('#page_body-error').show();
  <% elsif @seminar %>
    var $error = $('#seminar_original-error');
    <% if !@seminar.errors[:original].empty? %>
      $error.html("formato de arquivo não aceito.");
    <% else %>
      $error.html("Já existe um arquivo com este nome.");
    <% end %>
    $('#seminar_original-error').show();

    $('#seminar_external_resource-error').html("<%= @seminar.errors[:external_resource].join(",") %>");
    $('#seminar_external_resource-error').show();
  <% elsif @document %>
    var $error = $('#document_attachment-error');
    <% if !@document.errors[:attachment_content_type].empty? %>
      $error.html("formato de arquivo não aceito.");
    <% else %>
      $error.html("Já existe um arquivo com este nome.");
    <% end %>
    $('#document_attachment-error').show();
  <% end %>
  $('#name-error').html("<%= @lecture.errors[:name].join(",") %>");
  $('#name-error').show();
<% end %>
