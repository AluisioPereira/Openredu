var $lectureItem = $("<%= escape_javascript(render :partial => 'lectures/item_short', :locals => { :item_short => @lecture}) %>");

<% # Insere novo item mantendo a ordem dele na lista %>
var $editingItem = $('#<%= @lecture.id %>-item');
$editingItem.after($lectureItem);
$editingItem.remove();

<% if @lecture.lectureable.class == Page %>
  var $editPageForm = $("<%= escape_javascript render 'lectures/edit', :lecture => @lecture, :subject => @subject, :space => @space %>");
  $('#<%= @lecture.id %>-item-edition').replaceWith($editPageForm);
<% end %>
