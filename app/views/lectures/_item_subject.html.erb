<li class="clearfix" >

  <strong><%= lecture.name%></strong>

  <div class="thumb photo">
    <%= link_to image_tag (lecture.thumb_url, :width => "70px"),
      lecture_path(lecture, :to_count => true) %>
  </div>
  <div class="headlines" style="width: 420px">

    <!--
    <span class="call">Descrição:</span>
    -->
    <span class="things">
      <%= truncate_words( lecture.description, 10, '...') %>
    </span>
  </div>

  <%= hidden_field_tag("aulas[]", lecture.id)%>

</li>
