<div class="statuses-wrapper status-medium">
  <ul class="status-type">
  	<li class="type-item type-comment selected"><a href="# " class="icon-comment2-lightblue_16_18-before">Comentar a aula</a></li>
  	<li class="type-item type-help"><a href="#" class="icon-request-help-lightblue_16_18-before">Pedir ajuda</a></li>
  </ul>
  <%= render :partial => 'statuses/create_status',
    :locals => { :statusable => lecture } %>
  <div id="statuses" class="statuses">
    <ol>
      <%= render :partial => 'statuses/item',
        :collection => statuses %>
    </ol>

    <%= will_paginate(statuses, :renderer => EndlessRenderer) %>
  </div><!-- end .statuses -->
</div>
