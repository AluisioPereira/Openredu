<div class="context">
  <% if current_user.get_association_with(@lecture.subject) %>
  <%= render :partial => 'subjects/progress_bar',
    :locals => { :student_grade => student_grade } %>
    <% form_remote_tag :url => done_space_subject_lecture_path(@lecture.subject.space,
                                                               @lecture.subject,
                                                               @lecture),
                       :html => { :id => 'do_lecture', :class => 'done' } do %>
      <% field_set_tag do %>
        <%= hidden_field_tag 'lecture_id', @lecture.id %>
        <% if done %>
          <%= hidden_field_tag 'done', '0' %>
        <% else %>
          <%= hidden_field_tag 'done', '1' %>
        <% end %>
        <%= check_box_tag '', nil, done,
          { :onclick => "$('#do_lecture').submit()" } %>
        <%= label_tag 'Aula finalizada' %>
      <% end %>
    <% end %>
  <% end %>
  <% unless @lecture.first_item? %>
    <%= link_to raw("&#8592; " + @lecture.previous_item.position.to_s ),
      space_subject_lecture_path(@lecture.subject.space, @lecture.subject,
                                 @lecture.previous_item),
      :class => 'previous button' %>
  <% end %>
  <% unless @lecture.last_item? %>
    <%= link_to raw(@lecture.next_item.position.to_s + " &rarr;"),
      space_subject_lecture_path(@lecture.subject.space, @lecture.subject,
                                 @lecture.next_item),
      :class => 'next button' %>
  <% end %>
</div><!-- end #context -->
