case params[:type].to_s
when 'Page'
  page.insert_html :after, 'lectures_types',
    :partial => 'lectures/form_page'
when 'Seminar'
  page.insert_html :after, 'lectures_types',
    :partial => 'lectures/form_seminar'
when 'Document'
  page.insert_html :after, 'lectures_types',
    :partial => 'lectures/form_document'
when 'Existent'
  page.insert_html :after, 'lectures_types',
    :partial => 'lectures/form_existent'
end
