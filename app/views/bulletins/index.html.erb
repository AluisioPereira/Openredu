<% if @bulletinable.class.to_s.eql? "Space" %>
  <%= render :partial => 'spaces/sidebar', :locals => { :space => @bulletinable } %>
<% else %>
  <%= render :partial => "environments/sidebar", :locals => { :environment => @bulletinable } %>
<% end %>
<div class="main grid_12 omega big-col">
    <% if @bulletinable.class.to_s.eql? "Environment" %>
      <%= render :partial => "environments/breadcrumbs",
            :locals => { :environment => @bulletinable } %>
      <%= render :partial => 'environments/header',
        :locals => { :environment => @bulletinable }%>
    <% elsif @bulletinable.class.to_s.eql? "Space" %>
      <%= render :partial => 'spaces/breadcrumbs', :locals => { :space => @bulletinable } %>
      <%= render :partial => 'spaces/header',
        :locals => { :space => @bulletinable }%>
    <% end %>

  <div id="space-bulletins" class="body">
    <div class="header">
      <h4>Notícias</h4>
      <span class="counter">
        <%= pluralize(@bulletinable.bulletins.length, 'notícia') %>
      </span>
    </div>
    <% if can? :manage, @bulletinable %>
      <div class="admin-actions">
        <%= link_to 'Criar nova notícia',
          new_polymorphic_path([@bulletinable, Bulletin.new]),
          :class => 'button vanilla' %>
      </div>
    <% end %>

    <div id="bulletins" class="bulletin-listing-wrapper clearfix">
      <ul>
        <%= render :partial => 'bulletins/item',
          :collection => @bulletins %>
      </ul>
      <%= will_paginate @bulletins, :renderer => EndlessRenderer %>
    </div>

  </div><!-- end #bulletin -->

</div><!-- end .main -->
