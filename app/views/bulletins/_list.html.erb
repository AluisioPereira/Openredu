<li class="clearfix">

	<%= link_to bulletin.title, bulletin %>
	<div class="pretty-text">		
		<% if is_index %>
			<% if bulletin.description.size < 300 %>
				<%= bulletin.description %>
			<% else %>
				<%= bulletin.description[0..300]+"..." %>
			<% end %>
		<% end %>
	</div>
	
	<%= time_ago_in_words(bulletin.updated_at) %>

</li>
