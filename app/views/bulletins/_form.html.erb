<%- form_for [ @bulletinable, @bulletin ] do |f| %>
	<fieldset><legend>Notícia</legend>
	<%= f.error_messages %>

    <%= hidden_field_tag("bulletinable_id", @bulletinable.id) %>
    <%= hidden_field_tag("bulletinable_type", @bulletinable.class) %>

    <%= f.label "Título" %>
    <%= f.text_field :title %>

    <% random_number = get_random_number%>
    <%= f.label "Breve Descrição" %>
    <%= f.text_area :tagline, :size => "70x4", :class => "tagline-#{random_number}" %>
    <%= render :partial => 'shared/limit_char_field', :locals => { :class_textarea => "tagline-#{random_number}" }%>

    <%= f.label "Descrição" %>
    <% if @bulletinable.class.to_s == 'Space' %>
      <%= f.cktext_area :description, :width=>'678px',
        :swf_params => { :assetable_type => @bulletinable.class.to_s, :assetable_id => @bulletinable.id }%>
    <% else %>
      <%= f.cktext_area :description, :width=>'910px',
        :swf_params => { :assetable_type => @bulletinable.class.to_s, :assetable_id => @bulletinable.id }%>
    <% end %>
    <%= f.label "Tags <span class='snippet'>(separadas por vírgula)</span>" %>
    <%= f.text_field :tag_list %>

    <%= f.submit "Salvar"%>
  </fieldset>
<% end %>

<%= link_to 'Ver todas', polymorphic_path([@bulletinable, Bulletin.new]) %>

