<fieldset>
	<legend>Configurações</legend>

	<% field_set_tag 'Quem pode entrar na rede?' do %>
		<%= f.label :subscription_type, "Todos", :class => "inline" %>
		<%= f.radio_button :subscription_type, "1", :checked => true %>
		<%= f.label :subscription_type, "Moderação", :class => "inline" %>
		<%= f.radio_button :subscription_type, "2" %>
	<% end %>
	
	<% field_set_tag 'Quem pode postar na rede?' do %>
		<%= f.label :sumbission_type, "Todos - sem moderação", :class => "inline" %>
		<%= f.radio_button :submission_type, "1", :checked => true %>
		<%= f.label :submission_type, "Todos - com moderação", :class => "inline" %>
		<%= f.radio_button :submission_type, "2" %>
		<%= f.label :submission_type, "Apenas professores e administradores", :class => "inline" %>
		<%= f.radio_button :submission_type, "3" %>
	<% end %>
	
	<% field_set_tag "Perfil da Rede" do %>
		<%= f.label :public_profile, "Público", :class => "inline" %>
		<%= f.radio_button :public_profile, true, :checked => true %> 
		<%= f.label :public_profile, "Privado (apenas nome e descrição serão mostrados)", :class => "inline" %>
		<%= f.radio_button :public_profile, false %>
	<% end %>
</fieldset>
