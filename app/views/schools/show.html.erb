    <tr>
        <td>
            <%= student.login %>
        </td>
        <td>
            <%= link_to 'Show', student %>
        </td>
    </tr>
    <% end %>
</table>
<%= link_to 'Todos os estudantes', school_path(@school) %>
<% end %>
