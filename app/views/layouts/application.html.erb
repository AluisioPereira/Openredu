<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<link href="#{application_url}favicon.ico" rel='shortcut icon' />	
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title><%= page_title %></title>
    <meta content='keywords for use in META tags' name='keywords' />
    <meta content='noindex,follow' name='robots' />
    <meta content='A description of your community for use in META tags.' name='description' />

	
  <%= render :partial => "shared/scripts_and_styles" %>
  
  <% if @rss_title && @rss_url %>
      <%= auto_discovery_link_tag(:rss, @rss_url, {:title => @rss_title}) %>
  <% end %>
  
  <% if (action_name == 'site_index') and current_user %>
  <script>
  	var flashvars = {
				config_url: "<%=application_url + 'constellation/constellation_config.xml'%>",
				selected_node_id: '1',
				instance_id: '1',
				passthru: 'user_id=<%=current_user.id%>',
				debug: 'false'
			};
			
			var params = {
				bgcolor: '#ffffff',
				allowScriptAccess: 'sameDomain',
				quality: 'high',
				scale: 'noscale'
			};
			
			var attributes = {
				id: "constellation_roamer",
				name: "constellation_roamer"
			};
			
			swfobject.embedSWF(
				"<%=application_url + 'constellation/constellation_roamer.swf'%>", "constellation", "100%", "100%",
				"9", "expressInstall.swf", flashvars, params, attributes);
  </script>
  <% end %>
 
 
 
</head>
<body>
<div id="busca" class="messagebox">
<div class="content">
</div>
</div>

<div id="conhecimento" class="messagebox">
<div class="content">
</div>
</div>

<div id="desempenho" class="messagebox">
<div class="content">
</div>
</div>

<div id="smartbar">
<ul>
	<li class="busca"><a href="#busca" class="first fire">Busca</a></li>
	<li class="conhecimento"><a href="#conhecimento" class="fire">Conhecimento</a></li>
	<li class="desempenho"><a href="#desempenho" class="fire">Desempenho</a></li>
</ul>
</div>
<div id="container_main">
<%= render :partial => "shared/header" %>


<div id = "flash_messages" >
	<%= render :partial => "shared/messages" %>
</div>

<div id="container_content">
	
	<%= @content_for_layout %>

<div id="footer">
	<div id="footer_all_content">
		<div id="footer_logo">
			 <%= image_tag("logo_redu1.png", :height => '65', :width => '150') %>
			
			</div>
		<div id="politicas"></div>
		
		<% if @rss_title && @rss_url %>
           <%= link_to :rss.l, @rss_url, {:title => @rss_title} %>
		<% end %>
		
		 <div id="footer_menu">
			<div id="copyright">
				Copyright Â© 2010 - Redu.com.br. Todos os direitos reservados. |
				Sobre o Redu |
				<%= link_to "Termos de Uso", application_url + "policy/tos.txt"  %> |
				<%= link_to "Privacidade", application_url + "policy/privacy.txt"  %>
				
			</div>
		</div>
    </div>    
</div>


</div><!-- FIM: all_content-->
</div>
</body>
</html>
