<div class="post grid_16">
      <div class="grid_3 alpha">
        <span class=""><%= time_ago_in_words post.created_at %></span>
        <%= link_to image_tag( post.user.avatar.url(:thumb), 
                              {:width => "40", :height=>"40", :border => 0 }), @user %>
        <span class="">
          <%= link_to truncate(post.user.display_name, :length => 15) %>
        </span>
        <span class=""><%= pluralize post.user.sb_posts_count, :post.l %></span>
        
        <% if logged_in? && post.editable_by?(current_user) %>
        <span class="">
          <%= link_to 'Editar Postagem', edit_space_forum_topic_sb_post_path(@space, @topic, post) %>
        </span>
        <% end %>
        <span><%= link_to 'Deletar Postagem', space_forum_topic_sb_post_path(@space, @topic, post), :method => :delete, :confirm => 'VocÃª realmente deseja deletar esta postagem?' %> </span>
 </div>
      <div class="grid_13 omega">
          <%= post.body_html %>
      </div>
    </div>
