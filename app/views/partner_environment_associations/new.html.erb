<%= render :partial => 'users/home_sidebar' %>
<div class="main grid_10" style="width: 580px;">
  <%= form_for @partner_environment_association, :url => partner_clients_path(@partner), :html => {:class => "concave-form"} do |f| %>
    <%= f.label :cnpj, "CNPJ" %>
    <%= f.text_field :cnpj %>

    <%= f.fields_for :environment do |builder| %>
      <%= render :partial => "environments/complete_form", :locals => { :f => builder }%>
      <%= builder.hidden_field :owner,  :value => current_user.id %>
    <% end %>

    <%= f.submit "Criar ambiente" %>
  <% end %>
</div>
