<%= form_for :contact, :html => {:class => 'concave-form call-us grid_9 alfa'} ,:url => contact_path do |f| %>
  <fieldset>
    <%= f.label :name, 'Nome:', :class => 'concave-label put-your-name' %>
    <%= f.text_field :name, :id => 'name',  :value =>'Digite o seu nome', :class => 'concave-input personal-information' %>
    <%= f.label :email, 'E-mail:', :class => 'concave-label put-your-email' %>
    <%= f.text_field :email, :id => 'email', :value =>'Digite o seu e-mail para contato (talvez tenhamos algo a lhe perguntar)', :class => 'concave-input personal-information' %>
    <%= f.label :body, 'Mensagem:', :id => 'message', :class => 'concave-label put-your-message' %>
    <%= f.text_area :body, :id => 'message',:value =>'Detalhe a situação que lhe levou a achar este erro, bem como o que fazia antes desta mensagem aparecer.', :class => 'concave-input message-box' %>
    <%= f.submit 'Enviar', :class => 'concave-button'%>
  </fieldset>
<% end %>
