<%= f.label :name, "Nome do evento:" %>
<%= f.text_field :name %>

<%= f.label :role, "Seu papel:" %>
<%= f.select :role, (options_for_select [["Participante", "participant"],
                     ["Palestrante", "speaker"], ["Organizador", "organizer"]]),
                     {}, { :class => "role" } %>

<%= f.label :year, "Ano:" %>
<%= f.date_select :year,
  :start_year => (Date.today - 90.years).year,
  :end_year => (Date.today + 10.years).year,
  :discard_day => true, :discard_month => true %>

<%= f.submit %>
