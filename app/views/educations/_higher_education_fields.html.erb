<% if higher_education.new_record? %>
  <%= f.select :kind,
    options_for_select([["Técnico", "technical"], ["Licenciatura", "degree"],
                       ["Bacharelado", "bachelorhip"],
                       ["Pós \"Stricto Sensu / MBA\"", "pos_stricto_sensu"],
                       ["Pós \"Lato Sensu\"", "pos_lato_sensu"],
                       ["Doutorado", "doctorate"],
                       ["PhD", "phd"]]) %>
<% end %>

<%= f.label :course, "Curso:" %>
<%= f.text_field :course %>
<span class="tip">Exemplo: engenharia civil, direito, medicina etc.</span>

<%= f.label :institution, "Instituição:" %>
<%= f.text_field :institution %>
<span class="tip">Nome da instituição responsável.</span>

<%= label_tag :start_year, "Período:" %>
<%= f.date_select :start_year,
  :start_year => (Date.today - 90.years).year,
  :end_year => (Date.today + 10.years).year,
  :discard_day => true, :discard_month => true %>

a:
<%= f.date_select :end_year,
  :start_year => (Date.today - 90.years).year,
  :end_year => (Date.today + 10.years).year,
  :discard_day => true, :discard_month => true %>

<%= f.label :description, "Descrição:" %>
<%= f.text_area :description, :class => "description" %>
<span class="tip">Detalhes do cursos e de suas realizações durante o período.</span>

<%= f.submit %>
