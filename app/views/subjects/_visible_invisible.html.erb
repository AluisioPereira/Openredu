<%# 
    Mostra botões de publicação e despublicação de Subject dependento
    das permissões do usuario. 
    Locals: space e subject 
%>
<% if can? :manage, subject %>
  <% if subject.visible? %>
    <%= link_to "Tornar invisível", turn_invisible_space_subject_path(space, subject),
      :confirm => "Ao tornar um módulo invisível, nenhum aluno terá acesso aos recursos do módulo." + \
      " Tem certeza?",
      :method => "post",
      :class => "cancel " %>
  <% else %>
      <%= link_to "Tornar visível", turn_visible_space_subject_path(space, subject),
        :confirm => "Tem certeza?",
        :method => "post",
        :class => "cancel " %>
  <% end %>
<% end %>

