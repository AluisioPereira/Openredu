<% if can? :manage, @subject %>
  <% if @subject.published? %>
    <%= link_to "Despublicar", unpublish_space_subject_path(@space, @subject),
      :confirm => "Ao despublicar um módulo, todas as matrículas serão perdidas." + \
      " Tem certeza?",
      :method => "post",
      :class => "button" %>
  <% else %>
      <%= link_to "Publicar", publish_space_subject_path(@space, @subject),
        :confirm => "Tem certeza?",
        :method => "post",
        :class => "button" %>
  <% end %>
<% end %>
