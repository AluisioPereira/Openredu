var $form = $('#new_subject');
var subject_form = "<%= escape_javascript render 'subjects/form', :subject => @subject  %>";
$form.replaceWith(subject_form);

<% if @subject.errors.empty? %>
  $('#subject_submit').attr("value", "Finalizar módulo");

  <%# Colocando botões para fora do form devido ao layout. %>
  var $buttons = $('#subject_submit, #cancel_link').remove().removeClass("bt-loading");
  $('<div/>', {'class': 'concave-form'}).append($buttons).insertAfter('#lectures_types');
<% end %>
