<div class="sidebar alpha grid_3">
  <div class="image-frame subject-frame">
    <!-- <%# Nao setar width e height na imagem %> -->
    <%= image_tag @course.environment.avatar.url(:thumb_100),
      :alt => 'profile' %>
  </div>

  <ul class="local-nav">
    <li>
      <div class=" <%= (current_page? space_subject_path(@subject.space,
        @subject) ) ?
        "session selected" : "session" %> ">
        <%= link_to 'Mural', space_subject_path(@subject.space, @subject),
          :class => 'icon icon-redu_r8_c379_s1' %>
      </div>
    </li>
    <li>
      <div class=" <%= (current_page? space_subject_lectures_path(@space, @subject) ) ? "session selected" : "session" %> ">
        <%= link_to 'Recursos', space_subject_lectures_path(@space, @subject),
                          :class => 'icon icon-redu_r9_c277_s1' %>
      </div>
    </li>
    <% if can? :manage, @subject %>
      <li>
        <div class="<%= (current_page? edit_space_subject_path(@space, @subject) ) ? "session selected" : "session" %>">
                         <%= link_to 'Gerenciamento', edit_space_subject_path(@space, @subject),
                           :class => 'icon icon-redu_r8_c221_s1' %>
        </div>
      </li>
    <% end %>
    <li>
      <div class="<%= (current_page? users_space_subject_path(@space, @subject) ) ? "session selected" : "session" %>">
                        <%= link_to "Membros (#{@subject.members.length})",
                          users_space_subject_path(@space, @subject),
                          :class => 'icon icon-redu_r8_c319_s1' %>
      </div>
      <ul class="connections clearfix">
        <%= render :partial => 'users/new/item_short',
            :collection => @subject.members.n_recent(9) %>
      </ul> <!-- end .coonections -->
      <a href="" class="more">Ver mais</a>
    </li>
  </ul><!-- end .local-nav -->
</div>

