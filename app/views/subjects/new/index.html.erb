<%= render :partial => 'spaces/new/sidebar' %>
<div class="main grid_12 omega big-col">
  <ol id="breadcrumbs" class="clearfix">
    <li>
      <%= link_to 'Home', home_user_path(current_user),
        :class => 'replacement home icon icon-redu_r8_c227_s1' %>
    </li>
    <li>
      <%= link_to @space.course.environment.name,
        environment_path(@space.course.environment),
        :class => 'replacement icon icon-redu_r8_c217_s1' %>
      <li>
        <%= link_to @space.course.name,
          environment_course_path(@space.course.environment, @space.course),
          :class => 'replacement icon icon-redu_r8_c313_s1' %>
      </li>
      <li>
        <%= link_to @space.name, space_path(@space),
          :class => 'icon icon-redu_r8_c307_s1' %>
      </li>
    </ol>
    <%= render :partial => 'spaces/new/header',
          :locals => { :space => @space }%>

  <div id="space-subjects" class="hierarchy-listing-wrapper">
    <div class="header">
      <h4>M贸dulos</h4>
      <span class="counter">
        <% if can? :manage, @space %>
          <%= pluralize(@space.subjects.count, 'm贸dulo') %>
        <% else %>
          <%= pluralize(@space.subjects.published.count, 'm贸dulo') %>
        <% end %>
      </span>
    </div>
    <% if can? :manage, @space %>
      <div class="admin-actions">
        <%= link_to "Novo m贸dulo", new_space_subject_path(@space),
           :id => 'link-new-subject', :class => 'button' %>
        <%= image_tag 'spinner.gif', :id => 'spinner-new-subject',
          :style => 'display: none;' %>
      </div>
    <% end %>

    <ul id="subjects_list" class="hierarchy-listing subjects">
      <%= render :partial => 'subjects/new/item', :collection => @subjects %>
    </ul>
    <%= will_paginate @subjects, :renderer => EndlessRenderer %>
  </div><!-- end #environment-courses -->
</div><!-- end .main -->
