<%= stylesheet_link_tag 'uploadify' %>
<%= render_uploadify(:id  => "subject_file_attachment",
  :url => "/subjects/attachment/#{@subject.id}",
  :allow_multiple_files => false,
  #:fields => ['seminar_external_resource_type_upload', 'step'],
  :max_size => 100.megabytes,
  :allowed_extensions => [:mov, :mpeg, :mpg, :avi, '3gp', :mp4, :mpeg4, :vob, :mkv, '264', '3gp2', :dvr, :dvx, :flv, :h264, :m2v, :m4v, :movie, :mpeg1, :mpeg2, :swf, :vid, :wmv, :pdf]) %>




<% form_for :subject_file, @subject_files, :url => {:controller => "subjects", :action => "attachment", :id => @subject.id }, :html => { :multipart => true } do |f| %>

  <%= f.label :attachment, "Arquivo do seu computador (mÃ¡ximo: 100MB)" %>
  <%= f.file_field :attachment  %>
  

<%= uploadify_cancel("Parar") %>
  <%= uploadify_submit "Enviar", :style => "margin: 10px 0; float: left; width: 120px; text-align: center; display: none;"  %>

<%end%>