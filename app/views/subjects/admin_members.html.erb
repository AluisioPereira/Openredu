<%= render :partial => "subjects/sidebar" %>
<div class="main grid_12 omega big-col">
  <%= render :partial => 'subjects/breadcrumbs', :locals => { :subject => @subject } %>
  <%= render :partial => 'subjects/header',
    :locals => { :subject => @subject, :space => @space } %>
  <div id="subject-edit" class="hierarchy-listing-wrapper">
    <div class="header">
      <h4>Gerenciamento</h4>
      <span class="counter">Informações gerais do módulo <%= @subject.title %></span>
    </div>

    <%= fake_tabs ["Informações", edit_space_subject_path(@space, @subject), { :class => "icon icon-management-gray_16_16" } ],
      ["Recursos", admin_lectures_order_space_subject_path(@space, @subject), { :class => "icon icon-resource-gray_16_16" } ],
      ["Membros", admin_members_space_subject_path(@space, @subject), { :class => "icon icon-members-lightblue_16_16" } ] do %>

      <div id="user_list">
        <%= render :partial => 'subjects/user_list_admin',
          :locals => {:memberships => @memberships}%>
      </div>

      <%= will_paginate  @memberships, :renderer => EndlessRenderer %>
    <% end %>
  </div><!-- end #subjec-edit -->
</div><!-- end .main -->
