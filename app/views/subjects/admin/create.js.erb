var $form = $('#new_subject');
var subject_form;
<% if @subject.valid? %>
  subject_form = "<%= escape_javascript render 'subjects/admin/edit', :space => @space, :subject => @subject %>";
<% else %>
  subject_form = "<%= escape_javascript render 'subjects/admin/new', :space => @space, :subject => @subject %>";
<% end %>
$form.replaceWith(subject_form);
