<div id="breadcrumbs"><b><strong><%= link_to "Cursos", subjects_path %></strong></b> > <b><strong><%= h @subject.title %></strong></b> </div>

<span class="call">Aulas:<br /></span>
<span class="things">
  <% @subject.assets.each do |asset| %>
    <%= link_to asset.assetable.name, lecture_path(cs.assetable) %>
    <a href="javascript:;" id="mais"> <b> | mais detalhe</b></a>
    <a href="javascript:;" id="menos"> <b>| menos detalhe</b></a>
    <%= link_to "| Assistir", lecture_path(asset.asseteable, :subject_id => @subject.id) %><br />

    <p id="description"><%= asset.assetable.description %> </p>
  <% end %>
</span><br />


<script type="text/javascript">
  $(document).ready(function(){
    $("#description").hide();

    $('a#mais').live('click', function(event){
      $("#description").show();
    });


    $('a#menos').live('click', function(event){
      $("#description").hide();
    });
  });

</script>
