<% if @subject.published? && !current_user.has_access_to?(@subject) %>
  <%= link_to "Matricule-se", enroll_space_subject_path(@space, @subject),
    :class => "button" %>
<% else %>
  <% unless current_user.get_association_with(@subject).student_profile.graduaded? %>
    <%= link_to "Desmatricular", unenroll_space_subject_path(@space, @subject),
      :confirm => "Tem certeza? Todas as suas informações vinculadas a este módulo serão perdidas.",
      :class => "button" %>
  <% end %>
<% end %>
