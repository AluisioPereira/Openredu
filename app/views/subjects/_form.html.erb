<%=  form_for [@space, subject], :remote => true,
  :html => { :class => 'concave-form new-subject' } do |f| %>
  <%= concave_error_messages_for(f.object) %>

  <span class="section-detail">Informações</span>
  <%= hidden_field_tag 'space_id', @space.id %>
  <%= render 'subjects/raw_form', :f => f %>
  <hr />

  <%= render 'lectures/index_short', :f => f %>

  <%= f.submit "Adicionar aulas", :class => 'add'%>
  <%= link_to "Cancelar", space_subjects_path(@space),
    :id => "cancel_link", :class => 'concave-clean' %>
  <% if action_name == "edit" %>
    <%= link_to "Deletar",
      space_subject_path(@space, @subject),
      :method => :delete,
      :confirm => "Você tem certeza que deseja deletar deste módulo? Todas as informações serão perdidas."  %>
  <% end %>
<% end %>
<div id="resources-edition">
  <% unless @subject.new_record? %>
    <%= render :partial => 'lectures/edit', :collection => @subject.lectures.pages, :as => :lecture, :locals => {:subject => @subject, :space => @space } %>
  <% end %>
</div>
<% unless @subject.new_record? %>
  <%= render :partial => 'lectures/choose_type',
    :locals => { :subject => @subject, :space => @space } %>
<% end %>
