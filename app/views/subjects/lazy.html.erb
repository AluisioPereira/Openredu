<div class="grid_16">
  <% unless @subject.published? %>
    <% if @subject.ready_to_be_published? %>
      <%= link_to "Publicar", publish_space_subject_path(@space, @subject),
            :confirm => "Tem certeza?" %>
    <% else %>
      <%= link_to "Publicar", publish_space_subject_path(@space, @subject),
            :confirm => "A criação deste módulo não foi finalizada. " + \
                        "Publicar somente aulas finalizadas?" %>
    <% end %>
  <% end %>
  <% unless @subject.lazy_assets.empty? %>
    <div class="lazy_list grid_12 alpha">
      <ul class="default">
        <%= render :partial => "lazy_item", :collection => @subject.lazy_assets %>
      </ul>
    </div>
  <% else %>
    <div class="box_notice">Nenhum recurso com criação pendente</div>
  <% end %>
</div>
