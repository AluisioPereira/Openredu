<h1>Listando Aulas</h1>

 <% form_tag({:action => 'add_course', :id => @subject}, :method => "get") do %>
	
	<table>
  <tr>
    <th>Nome</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
  	<td><%= check_box_tag("course[id][]", value =  course.id, checked = nil) %></td>
    <td><%=h course.name %></td>
  </tr>
<% end %>
</table>
	<%= submit_tag("OK") %>
	
<% end %>

<br />
<%= link_to 'Back', subject_path %>