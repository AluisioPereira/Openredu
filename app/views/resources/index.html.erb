<h1>Listando todos os materiais da rede (convertidos)</h1>
<% if current_user %>
<%= link_to "Meus Materiais", user_resources_path(current_user) %>
<% end %>

<p>
	<div id="local_search_form">
	<%= render :partial => "resources/search" %>
	</div>
</p>

<%= render :partial => "resources/sort" %>
<hr>

<div id="local_search_results" style="min-height: 200px">

 <% if @resources && @resources.length > 0 %>
 <%= render :partial => 'resources/item', :collection => @resources, :as => :resource %> 
 <% else %>
 Não há materiais uploadeados ainda. 
 <% end %>

</div>



