<!-- LISTAGEM RECURSO ############################################################################################################################################## -->

<div id="filter_bar">
    <span class="title_list">MAIS RECENTES</span>
		
		<%= render :partial => "resources/sort" %>
 </div>
	  
    <div id="all_list">
    	
    	<% if @resources && @resources.length > 0 %>
 			<%= render :partial => 'resources/item', :collection => @resources, :as => :resource %> 
 		<% else %>
 			Não há itens uploadeados ainda. <%= link_to 'Crie um agora!', :action => 'new' %>
		<% end %>
		
    </div>
<!-- LISTAGEM RECURSO ############################################################################################################################################## -->
    
<!-- PAGINACAO ##################################################################################################################################################### -->
   
	<div class="pagination" align="center">
		<%= will_paginate  @resources, :params => {:sort_by => @sort_by}, :class => "pagination_number"  %>
	</div>
	
	
	
	
<!-- PAGINACAO ##################################################################################################################################################### -->
</div>

