$("#experience-<%= @experience.id %>").slideUp(150, 'swing', function() {
  $(this).remove();
  if (!$('#curriculum .experiences li').length) {
    $('#curriculum .experience .config-new-item').hide();
    $('#new_experience').css('padding-top', 0);
      .find('.title')
        .remove()
      .end()
      .find('.cancel')
        .hide()
      .end()
      .slideDown(150, 'swing');
  }
});
