<li id="experience-<%= item.id %>">
  <div class="infos clearfix">
    <a href="#" class="edit-experience icon-manage-gray_8_10-before"><%= t :edit %></a>
    <%= link_to (t :remove), user_experience_path(item.user, item),
      :remote => true, :method => :delete,
      :class => "remove-experience icon-small icon-delete-gray_16_18 replacement",
      :confirm => "Você tem certeza que deseja excluir esta experiência? Não será mais possível recuperá-la." %>
    <%= render :partial => "experiences/item_detail", :locals => { :item => item } %>
  </div>

  <%= render :partial => 'experiences/form', :locals => { :user => item.user,
    :experience => item } %>
</li>
