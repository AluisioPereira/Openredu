<div class="span3">
  <%= render :partial => "users/left_sidebar",
    :locals => { :user => @user } %>
</div>
<div class="span10">
  <div class="content-area">
    <%= render :partial => "oauth_clients/breadcrumb", :locals => { :user => @user } %>
    <div class="content-body">
      <%= render :partial => 'oauth_clients/header_breadcrumb_index', :locals => { :user => @user } %>

      <div class="my-app-tabs">
        <%= new_tabs(:new_users) %>
        <%= new_subtabs(:new_users) %>
      </div>
      <div class="content-section my-app">
        <%= form_for @client_application, :url => user_oauth_client_path(@user, @client_application), :html => { :method => :put, :class => 'my-app-edit-form' }  do |f| %>
          <%= render :partial => "form", :locals => { :f => f } %>
          <div class="my-app-actions">
            <%= f.submit "Salvar", :class => 'button-primary' %>
          </div>
        <% end %>
      </div>
    </div>
    <%= render :partial => "oauth_clients/breadcrumb", :locals => { :user => @user } %>
  </div>
</div>
<div class="span3">
  <%= render :partial => "users/right_sidebar",
    :locals => { :user => @user } %>
</div>


