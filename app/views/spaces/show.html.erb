<%= render :partial => 'spaces/sidebar', :locals => { :space => @space } %>
<div class="main grid_12 omega big-col">
  <%= render :partial => 'spaces/breadcrumbs', :locals => { :space => @space } %>
  <%= render :partial => 'spaces/header',
    :locals => { :space => @space }%>

  <div id="space-statuses" class="hierarchy-listing-wrapper">
    <div class="header">
      <h4>Mural</h4>
      <span class="counter">Atividades recentes</span>
    </div>

    <div style="clear: both;">
    <%= render :partial => 'statuses/create_status',
      :locals => { :statusable => @space } %>
    <div id="statuses" class="statuses">
      <ol>
        <%= render :partial => 'statuses/item', :collection => @statuses %>
      </ol>

      <%= will_paginate @statuses, :renderer => EndlessRenderer %>
    </div>
    </div><!-- end .statuses -->
  </div><!-- end #environment-courses -->

</div><!-- end .main -->
