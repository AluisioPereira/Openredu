<% content_for :page_id, 'group' %>
<div class="main grid_16">
  <div class="fake-tabs grid_16 alpha omega">
    <%= render :partial => "spaces/admin_taskbar" %>
    <div class="panel">
      <h3>Administracão de Notícias</h3>
      <div id="all_list">

        <% if @pending_bulletins && @pending_bulletins.size > 0 %>
          <% form_tag :action => :moderate_bulletins do %>
            <table class="common">
              <tr>
                <th style="max-width:25px;">Aprovar</th><th style="max-width:27px;">Rejeitar</th><th>Notícia</th><th>Autor</th><th>Data</th>
              </tr>
              <% for bulletin in @pending_bulletins %>
                <tr>
                  <tr>
                    <td><%= radio_button_tag '[bulletin]['+ bulletin.id.to_s+']', 'approve'  %></td>
                    <td><%= radio_button_tag '[bulletin]['+ bulletin.id.to_s+']', 'reject' %></td>
                    <td><%= link_to bulletin.title, bulletin_path(bulletin), :target => "_blank" %> </td>
                    <td><%= bulletin.owner.display_name %> </td>
                    <td><%= time_ago_in_words(bulletin.updated_at) %> </td>
                  </tr>
                </tr>
              <% end %>
            </table>
            <%= hidden_field_tag("id", @space.id) %>
            <%= submit_tag "Moderar" %>
          <% end %>
        <% else %>
          <div class="box_notice">
            Não há notícias a serem moderadas.
          </div>
        <% end %>

      </div> <!-- fim da listagem --> 

      <h3>Notícias Aprovadas</h3>
      <%= render :partial => 'bulletins/index_admin' %>

      <div id="pagination" align="center" class="pagination">
        <%= will_paginate  @bulletins, :params => {:sort_by => @sort_by}, :class => "pagination_number"  %>
      </div>
    </div> <!-- end panel -->
  </div><!-- end tabs -->
</div><!-- end main -->





