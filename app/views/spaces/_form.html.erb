<%= concave_error_messages_for(@space) %>

<%= field_set_tag nil, :class => "hidden" do %>
  <%= hidden_field_tag "course_id", @course.id %>

  <%= f.label :name, "Nome" %>
  <%= f.text_field :name ,  :onkeyup => ((edit) ? nil : "generatePath(this)") %>
  <%= concave_errors_for(f.object, :name) %>

  <% random_number = get_random_number%>
  <%= f.label :description, "Descrição:" %>
  <%= f.text_area :description, :size => "50x3", :class => "desc-#{random_number}" %>
  <%= concave_errors_for(f.object, :description) %>
  <%= render :partial => 'shared/limit_char_field', :locals => { :class_textarea => "desc-#{random_number}" }%>

  <%= f.label :tag_list, raw("Palavras-chaves <span class='snippet'>(separadas por vírgula)</span> ") %>
  <%= f.text_field :tag_list %>
<% end %>

<% unless edit %>
    <strong class="concave-label">Termos e condições do Redu</strong>

    <div class="tos">
      Por favor não publique conteúdo que esteja protegido por direitos autoriais, conteúdo obsceno ou que viole os termos e condições do Redu. Ao clicar no botão abaixo, você estará concordando com esses termos.
    </div>
<% end %>
<hr />

