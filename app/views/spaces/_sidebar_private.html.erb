<div class="sidebar grid_4">
  <ul class="sortable clearfix">
  
  <li class="clearfix">
    <span class="call"><span>Membros (<%= @space.users.size %>)</span></span>
      <div class="followship box clearfix">
      <ul class="clearfix">
        <%= render :partial => 'spaces/member_short', :collection => @space.users, :as => :member %>
      </ul>
      <a href="" class="icon more">Ver mais</a>
      </div><!-- end followship -->
  </li>
  <li class="clearfix">
    <span class="call"><span>Professores (<%= teachers_preview(space).size %>)</span></span>
    <% unless teachers_preview(space).empty? %>
    <div class="followship box clearfix">
        <ul class="clearfix">
        <%= render :partial => 'spaces/member_short', :collection => teachers_preview(space), :as => :member %>
        </ul>
        <a href="" class="icon more">Ver mais</a>
    </div><!-- end followship -->
    <% else %>
      <span class="notice">Nenhum professor cadastrado</span>
    <% end %>
  </li>
  </ul><!-- end sortable -->

</div><!-- end sidebar -->
