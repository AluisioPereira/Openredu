<%= render :partial => 'spaces/sidebar', :locals => { :space => @space } %>
<div class="main grid_12 omega big-col">
  <%= render :partial => "spaces/breadcrumbs", :locals => { :space => @space } %>
  <%= render :partial => 'spaces/header',
    :locals => { :space => @space }%>

    <div id="space-manage" class="body">
      <div class="header">
        <h4>Gerenciamento</h4>
        <span class="counter">Lista de Eventos pendentes e publicados na Disciplina <%= @space.name %></span>
      </div>

      <% fake_tabs ["Informações", edit_space_path(@space), { :class => "icon icon-management-gray_16_16" }],
        ["Eventos", admin_events_space_path(@space), { :class => "icon icon-event-lightblue_16_16" }],
        ["Membros", admin_members_space_path(@space), { :class => "icon icon-members-gray_16_16" }],
        ["Notícias", admin_bulletins_space_path(@space), { :class => "icon icon-bulletin-gray_16_16" }] do %>

        <div class="actions">
          <%= link_to "Crie um agora!", new_polymorphic_path([@space || @environment, Event.new]),
            :class => 'button'%>
        </div>
        <%= render :partial => 'events/moderate_index_admin' %>
        <%= render :partial => 'events/index_admin' %>
      <% end %>
    </div><!-- end #space-manage -->

  </div><!-- end .main -->

