<%= render :partial => 'spaces/new/sidebar' %>
<div class="main grid_12 omega big-col">
  <ol id="breadcrumbs" class="clearfix">
    <li>
      <%= link_to 'Home', home_user_path(current_user),
        :class => 'replacement home icon icon-redu_r8_c227_s1' %>
    </li>
    <li>
      <%= link_to @space.course.environment.name,
        environment_path(@space.course.environment),
        :class => 'replacement icon icon-redu_r8_c217_s1' %>
      <li>
        <%= link_to @space.course.name,
          environment_course_path(@space.course.environment, @space.course),
          :class => 'replacement icon icon-redu_r8_c313_s1' %>
      </li>
      <li>
        <%= link_to @space.name, space_path(@space),
          :class => 'icon icon-redu_r8_c307_s1' %>
      </li>
    </ol>
    <%= render :partial => 'spaces/new/header',
      :locals => { :space => @space }%>

    <div id="space-manage" class="body">
      <div class="header">
        <h4>Gerenciamento</h4>
        <span class="counter">Lista de Eventos pendentes e publicados na Disciplina <%= @space.name %></span>
      </div>

      <% fake_tabs ["Informações", edit_space_path(@space), { :class => "icon" }],
        ["Eventos", admin_events_space_path(@space), { :class => "icon" }],
        ["Membros", admin_members_space_path(@space), { :class => "icon" }],
        ["Notícias", admin_bulletins_space_path(@space), { :class => "icon" }] do %>

        <div class="actions">
          <%= link_to "Crie um agora!", new_polymorphic_path([@space || @environment, Event.new]),
            :class => 'button'%>
        </div>
        <%= render :partial => 'events/new/moderate_index_admin' %>
        <%= render :partial => 'events/new/index_admin' %>
      <% end %>
    </div><!-- end #space-manage -->

  </div><!-- end .main -->

