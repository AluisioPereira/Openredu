<%= render :partial => 'spaces/new/sidebar' %>
<div class="main grid_12 omega big-col">
  <%= render :partial => 'spaces/new/breadcrumbs', :locals => { :space => @space } %>
  <%= render :partial => 'spaces/new/header',
    :locals => { :space => @header_space }%>

    <div id="space-manage" class="body">
      <div class="header">
        <h4>Gerenciamento</h4>
        <span class="counter">Informações gerais da Disciplina <%= @space.name %></span>
      </div>

      <% fake_tabs ["Informações", edit_space_path(@space), { :class => "icon icon-management-lightblue_16_16" }],
        ["Eventos", admin_events_space_path(@space), { :class => "icon icon-event-gray_16_16" }],
        ["Membros", admin_members_space_path(@space), { :class => "icon icon-members-gray_16_16" }],
        ["Notícias", admin_bulletins_space_path(@space), { :class => "icon icon-bulletin-gray_16_16" }] do %>

        <% form_for(@space, :html => { :class => "common", :multipart => true }) do |f| %>
          <%= render :partial => "spaces/new/form",
            :locals => { :f => f, :edit => true} %>

          <%= f.submit 'Salvar alterações' %>
          <%= link_to 'Deletar disciplina', @space,
            :confirm => 'Você tem certeza que deseja remover esta disciplina?', :method => :delete,
            :class => "vanilla remove" %>
        <% end %>

      <% end %>
    </div><!-- end #space-manage -->

  </div><!-- end .main -->
