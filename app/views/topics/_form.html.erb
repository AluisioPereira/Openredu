		<label for='topic_title'>
			<%= :title.l %>
			<%= form.text_field :title, :class => "primary" %>
		</label>	
			<%- if admin? or current_user.moderator_of?(@topic.forum) %>
				<fieldset>
					<label>
						<%= form.check_box :sticky %>
						<%= :sticky.l %>
					</label>
					<label>
						<%= form.check_box :locked %>
						<%= :locked.l %>
					</label>
				</fieldset>
			<% end %>
		
		
		<label for='username'>
			<%= :tags.l %>
			<em>
				<%="(#{:optional_keywords_describing_this_topic_separated_by_commas.l})" %>
			</em>
		</label>
		<%= text_field_tag 'tag_list', @topic.tag_list, {:autocomplete => "off", :size => 35}%> <br/>
		<div id='tag_list_auto_complete' class='auto_complete'>
			<%= auto_complete_field 'tag_list', {:url => { :controller => "tags", :action => 'auto_complete_for_tag_name'}, :tokens => [','] } %>
		</div>
		<%- if @topic.new_record? %>
			<label for='topic_body'>
				<%= :body_text.l %>				
			</label>
			<%= form.text_area :body, :rows => 12 %>
			<%- if admin? and not @topic.new_record? %>
				<p id='topic_forum_id'>
					<label for='topic_forum_id'>
						<%= :forum.l %>
					</label>
					<%= form.select :forum_id, Forum.find(:all, :order => "position").map {|x| [x.name, x.id] } %>
				</p>	
			<% end %>
		<% end %>
