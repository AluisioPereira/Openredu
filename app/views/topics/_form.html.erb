<%# locals => {:space_id, :topic, :form_new => Indica se o form vai ser de editar ou criar.} %>
<div class="grid_16">
	<%- form_for @topic do |f| %>
		<fieldset>
		  <legend>
		    <% if form_new %>
		      <%= t :new_topic %>
		    <% else %>
		      <%= t :edit_topic %>
		    <% end %>
		  </legend>
		<span><%= t :by %> <%= link_to current_user.display_name, user_path(current_user) %></span>
		<%= f.error_messages %>

		<%= hidden_field_tag("space_id", @space.id) %>

		<%= f.label :title, t(:title) %>
		<%= f.text_field :title %>

		<% if admin? or current_user.moderator_of?(@topic.forum) %>
		  <%= f.check_box :locked %> <%= t :locked %>
		<% end %>

		<%= f.label :tag_list, 'Palavras-chave' %>
		<span>(separadas por v√≠rgula)</span>
		<%= f.text_field :tag_list %>

		<% if form_new %>
		  <%= f.label :body, t(:body_text) %>
		  <%= f.cktext_area :body %>
		<% end %>

		<% if form_new %>
		  <%= f.submit t(:post_topic) %> <%= :or.l %> <%= link_to :cancel.l, space_path(@space) %>
		<% else %>
		 <%= f.submit t(:save) %> <%= :or.l %> <%= link_to :cancel.l, space_forum_topic_path(@space, @topic) %>
		<% end %>
	<% end %>
</div>
