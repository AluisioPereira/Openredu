<div id="item">
    <div id="title">
        <%= link_to course.name, course %>
    </div>
    <div id="video" style="background: url('<%= File.join(File.dirname(course.media.url), "#{course.id}128x96.jpg") %>') 0 0">
        <!-- Video Insert -->
        <div id="video_info">
            00:00:00
        </div>
    </div>
    <div id="identification">
        <ul id="identification_resource">
            <!--Fiz uma modificação antes ficava link_to course.owner.login -->
            <li>
                <%= link_to course.owner.login, user_path(course.owner) %>
            </li>
            <li>
                |
            </li>
            <li>
                <%= time_ago_in_words(course.created_at) %>
            </li>
        </ul>
    </div>
    <div id="description">
        <%= (course.description.length > 250) ? (course.description[0..250] + "...") : course.description  %>
    </div>
    <div id="identification">
        <ul id="identification_resource">
            <li>
                <strong>Categoria:</strong>
                Matemática
            </li>
            <li>
                |
            </li>
            <li>
                <strong>Tags:</strong>
                <%= course.tag_list %>
            </li>
        </ul>
    </div>
    <div id="actions">
        <ul id="actions_resource">
            <li>
                <a href="#" class="share">Compartilhar</a>
            </li>
            <li>
                |
            </li>
            <li>
                <a href="#" class="favorites">Favoritos</a>
            </li>
            <!--
			<li>
                |
            </li>
            <li>
                <a href="#" class="download">Download</a>
            </li>
			-->
            <li>
                |
            </li>
            <li>
                <a href="#" class="comments">Comentários(<%= course.comments.count %>)</a>
            </li>
            <!--Começando a fazer os testes com compra de aula -->
            
			
			<% if current_user and not current_user.has_access_to_course(course) %>
			<li>
                |
            </li>
            <li>
            	<%= link_to "Comprar", { :action => :buy, :id => course}, :class => "download" %>
            </li>
			<% end %>
			
        </ul>
    </div>
    <div id="ratting">
    	
		
		
        <ul id="ratting_menu">
        	<!--
            <li>
                <img src="images/icon_star_on.png"/>
            </li>
            <li>
                <img src="images/icon_star_on.png"/>
            </li>
            <li>
                <img src="images/icon_star_on.png"/>
            </li>
            <li>
                <img src="images/icon_star_off.png"/>
            </li>
            <li>
                <img src="images/icon_star_off.png"/>
            </li>
			-->
			<li>
               <%= ratings_for course, :static %>
            </li>
            <li class="evaluation_rating">
                Avaliações(<%= course.rates.count %>)
            </li>
        </ul>
		
		
    </div>
</div>
