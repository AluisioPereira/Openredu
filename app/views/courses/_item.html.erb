<div id="item">
    <div id="title">
        <%= link_to course.name, course %>
    </div>
    <div id="video" style="background: url(<%=course.thumb_url%>) 0 0">
        <!-- Video Insert --><!--
        <div id="video_info">
        00:00:00
        </div>
        -->
    </div>
    <div id="identification">
        <ul id="identification_resource">
            <!-- Uma modificação, antes ficava link_to course.owner.login -->
            <li>
                <%= link_to course.owner.display_name, user_path(course.owner) %>
            </li>
            <li>
                |
            </li>
            <li> Criado: 
                <%= time_ago_in_words(course.created_at) %>
            </li>
            <li>
                |
            </li>
            <li>
                Exibições (<%= course.view_count %>)
            </li>
        </ul>
    </div>
    <div id="description">
        <%= truncate_words( course.description, 10, '...') %>
    </div>
    <div id="identification">
        <ul id="identification_resource">
            <li>
                <strong>Categoria:</strong>
                Matemática
            </li>
            <li>
                |
            </li>
            <li>
                <strong>Tags:</strong>
                <%= course.tag_list %>
            </li>
        </ul>
    </div>
    <div id="ratting">
        <ul id="ratting_menu">
            <li>
                <%= ratings_for course, :static %>
            </li>
            <li class="evaluation_rating">
                Avaliações(<%= course.rates.count %>)
            </li>
        </ul>
    </div>
</div>
