<% if @sidebar_preview %>
  <%= render :partial => 'courses/preview_sidebar' %>
<% else %>
  <%= render :partial => 'courses/sidebar' %>
<% end %>

<div class="main grid_12 omega big-col">
  <%= render :partial => 'courses/breadcrumbs',
    :locals => { :course => @course }%>
  <%= render :partial => 'courses/header',
    :locals => { :course => @course }%>
  <div id="course-users" class="hierarchy-listing-wrapper">
    <div class="header">
      <h4>Membros</h4>
      <span class="counter">
        <%= @course.approved_users.length %> pessoas fazem parte de
        <%= @course.name %>
      </span>
    </div>
    <% if can? :manage, @course %>
      <div class="admin-actions clearfix">
        <%= 
          link_to "Convidar membros", admin_invitations_environment_course_path(@environment, @course),
            :class => "button"
        %>
      </div>
    <% end %>

    <ul id="users_list" class="members clearfix">
      <%= render :partial => 'users/item',
        :collection => @users, :locals => {:entity => @course} %>
    </ul>

    <%= will_paginate @users, :renderer => EndlessRenderer %>
  </div><!-- end #environment-courses -->

</div><!-- end .main -->
