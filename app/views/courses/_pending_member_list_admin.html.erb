<% if @pending_members && @pending_members.size > 0 %>
  <% form_tag  moderate_members_requests_environment_course_path(@environment, @course), :method => :post do %>
    <table id="pending_member_list" class="common">
      <thead>
        <th style="max-width:25px;">Aprovar</th><th style="max-width:27px;">Rejeitar</th><th>Nome</th><th>Data</th>
      </thead>
      <%= render :partial => 'pending_member_item_admin', :collection => @pending_members %>
    </table>
    <%= will_paginate @pending_members, :renderer => EndlessRenderer %>
    <%= submit_tag "Moderar" %>
  <% end %>
<% else %>
    <div class="box_notice">Não há solicitacões pendentes.</div>
<% end %>
