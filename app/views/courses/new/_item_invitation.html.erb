<li id="requisition-<%= item_invitation.id %>" class="clearfix">
  <span>VocÃª foi convidado para o curso:</span>
  <div class="grid_5 course">
    <%= image_tag 'new/missing_courses_thumb_32.png', :class => 'avatar' %>
    <div class="grid_4 course-details">
      <%= link_to item_invitation.course.name,
        preview_environment_course_path(item_invitation.course.environment,
                                        item_invitation.course),
        :class => 'name' %>
      <span class="counter">
        <%= pluralize item_invitation.course.approved_users.count,
          'membro'  %>
      </span>
    </div>
  </div>
  <div class="actions">
    <%= image_tag 'spinner.gif', :style => 'display: none;',
      :id => "spinner-#{item_invitation.id}" %>
    <%= link_to_remote 'Recusar',
      :url => deny_environment_course_path(item_invitation.course.environment,
                                          item_invitation.course),
      :loading => "$('#spinner-#{item_invitation.id}').show();",
      :success => "$('#requisition-#{item_invitation.id}').slideToggle();",
      :html => { :class => 'remove' }%>
    <%= link_to_remote 'Aceitar',
      :url => accept_environment_course_path(item_invitation.course.environment,
                                          item_invitation.course),
      :loading => "$('#spinner-#{item_invitation.id}').show();",
      :success => "$('#requisition-#{item_invitation.id}').slideToggle();",
      :html => { :class => 'accept-invitation' }%>
  </div>
</li>
