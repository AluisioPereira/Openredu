<ol id="breadcrumbs" class="course clearfix">
  <li>
    <%= link_to 'Home', home_user_path(current_user),
      :class => 'replacement home icon icon-home-lightblue_16_16' %>
  </li>
  <li>
    <%= link_to @environment.name, environment_path(@environment),
      :class => 'replacement icon icon-environment-lightblue_16_16' %>
  </li>
  <li>
    <%= link_to @course.name,
      environment_course_path(@course.environment, @course),
      :class => 'icon icon-course-lightblue_16_16' %>
  </li>
  <% if can? :manage, @course %>
    <% if @course.subscription_type.eql? 2 and # Possui moderação
      @course.pending_users.count > 0 %>
      <li class="moderation_count">
        <%= link_to "Moderações pendentes: #{@course.pending_users.count}",
          admin_members_requests_environment_course_path(@environment, @course) %>
      </li>
    <% end %>
  <% end %>
</ol>
