<%= render :partial => 'shared/management_background' %>
<%= render :partial => 'environments/sidebar', :locals => { :environment => @environment } %>
<div class="main grid_12 omega big-col">
  <%= render :partial => "environments/breadcrumbs", :locals => { :environment => @environment } %>
  <%= render :partial => 'environments/admin/header',
    :locals => { :environment => @environment } %>
  <div id="course-new" class="body management">
    <%= render 'environments/admin/clean_header' %>
    <%= tabs :environments_admin do %>
      <%= form_for @course,
        :url => environment_courses_path(@environment),
        :html => { :class => 'concave-form clearfix' } do |f| %>
        <%= f.error_messages %>
        <%= render :partial => 'courses/form', :locals => { :f => f, :edit => false } %>
        <hr />
        <%= f.submit "Salvar alterações" %>
      <% end %>
    <% end %>
  </div>
</div>
