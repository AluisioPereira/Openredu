<div id="all_content3">
<div id="col_content">
	<div id="breadcrumbs">
		<a href="<%=application_url%>">home</a> >
		 
		<a href="#">aulas </a> > 
		<a href="#">favoritos</a> 
		</div>
 	<div id="title">AULAS FAVORITAS
	
	<%= render :partial => @taskbar %>

	</div>
	<div id="filter_bar">
		
	    <span id="title_list" class="title_list"> TODOS</span>
	   
		
	      
    </div>
    <div id="all_list">
    	
		<% if @courses && @courses.length > 0 %>
 			<%= render :partial => 'courses/item', :collection => @courses, :as => :course %> 
 		<% else %>
 			Não há aulas favoritadas ainda. 
		<% end %>
    	
    </div> <!-- fim da listagem --> 
	
	<!-- PAGINACAO ##################################################################################################################################################### -->
    <div id="pagination" align="center">

		<%= will_paginate  @courses, :params => {:sort_by => @sort_by}, :class => "pagination_number"  %>

		
    </div>
	
	<!-- Movimentação Recente --> 
	
</div>
<div id="col_box3">
	<% if current_user %>
	<% @logs = current_user.log_activity %>
	<%= render :partial => 'logs/log', :locals => {:logs => @logs} %>
	<% else %>
	<%= render :partial => 'logs/not_logged_in', :locals => {:logs => @logs} %>
	<% end %>
	</div>
</div>



