    <%= f.submit 'Salvar Aula' %> | <%= link_to "Visualizar", unpublished_preview_courses_path, :target => "_blank"%> | <%= link_to_function "Salvar parcialmente", "save()"%>
  </p>
  </div>
  
  <%= render :partial => 'form_interactive', :locals => {:f => f, :interactive_class => @interactive_class} %>

 <div style="float: left;">
 <%= link_to '< Anterior', new_course_path(:step => '1', :prev => '2'), :class => "button" %> 
