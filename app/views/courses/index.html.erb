<div id="all_content3">
<div id="col_content">
	<div id="breadcrumbs"><a href="<%=application_url%>">home</a> > <a href="#">aprender</a> > <a href="#">aulas</a> </div>
 	<div id="title">AULAS
	<%  if logged_in? %>
  		<div id="task_bar_exames"><%= link_to 'Nova Aula', :action => 'new' %> | 
  		<%= link_to 'Minhas Aulas', published_user_courses_path(current_user.id) %> |
		<%  if current_user.admin? %>
			<span style="color: #FF0000">
			<%= link_to 'Moderar Vídeos', pending_courses_path %>
			</span>
		<% end %>
		</div>
	<% end %>
	</div>
	<div id="filter_bar">
		
	    <span id="title_list" class="title_list"> MAIS RECENTES</span>
	    <span class="title_filter">Ordenar:</span>
	      
    </div>
    <div id="all_list">
    	
		<% if @courses && @courses.length > 0 %>
 			<%= render :partial => 'courses/item', :collection => @courses, :as => :course %> 
 		<% else %>
 			Não há exames publicados ainda. <%= link_to 'Crie um agora!', :action => 'new' %>
		<% end %>
    	
    </div> <!-- fim da listagem --> 
	
	<!-- Movimentação Recente --> 
	
</div>
<div id="col_box3">
	<% if current_user %>
	<% @logs = current_user.log_activity %>
	<%= render :partial => 'logs/log', :locals => {:logs => @logs} %>
	<% else %>
	<%= render :partial => 'logs/not_logged_in', :locals => {:logs => @logs} %>
	<% end %>
	</div>
</div>



