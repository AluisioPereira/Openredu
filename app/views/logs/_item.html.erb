<div id="move_item">
    <div id="move_foto">
        <%= link_to image_tag(item.user.avatar_photo_url(:thumb), :height => '20', :width => '20', :alt => "#{item.user.login}"), user_path(item.user), :rel => 'bookmark', :class => 'move_foto', :title => "#{item.user.login}'s profile" %> 
    </div>
    <div id="move_txt">
    	
		<% activity = " atividade? " %>
		
        <% if item.logeable_type.eql?('Course') %>
		
		<% activity = " está assistindo a aula " + link_to(item.logeable_name, course_path(item.logeable_id)) if item.action == "show" %>
		<% activity = " criou a aula " + link_to(item.logeable_name, course_path(item.logeable_id)) if item.action == "create" %>
		<% activity = " adicionou a aula " + link_to(item.logeable_name, course_path(item.logeable_id)) + " ao seus favoritos" if item.action == "favorite" %>
				
        <li>
        	<%= link_to item.user.login, user_path(item.user) %>
             <%= activity %>
        </li>
		<% elsif item.logeable_type.eql?('Resource') %>
		
		<% activity = " disponibilizou o material " + link_to(item.logeable_name, resource_path(item.logeable_id)) if item.action == "create" %>
		<% activity = " adicionou o material " + link_to(item.logeable_name, resource_path(item.logeable_id)) + " ao seus favoritos" if item.action == "favorite" %>
		
		
       	<li>
        	<%= link_to item.user.login, user_path(item.user) %>
             <%= activity %>
        </li>
        <% elsif item.logeable_type.eql?('Exam') %>
		
        <% activity = " está respondendo ao exame " + link_to(item.logeable_name, exam_path(item.logeable_id)) if item.action == "answer" %>
		<% activity = " criou o exame " + link_to(item.logeable_name, exam_path(item.logeable_id)) if item.action == "exame" %>
		<% activity = " adicionou o exame " + link_to(item.logeable_name, exam_path(item.logeable_id)) + " ao seus favoritos" if item.action == "favorite" %>
				
        <li>
        	<%= link_to item.user.login, user_path(item.user) %>
             <%= activity %>
        </li>
        <% elsif item.logeable_type.eql?('User') %>
        <% activity = " acabou de entrar no redu" if item.action == "login" %>
		<% activity = " atualizou dados de seu perfil" if item.action == "update" %>		
        
		<li>
        	<%= link_to item.user.login, user_path(item.user) %>
             <%= activity %>
        </li>
        
        <% end %>
        <div id="time">
            <%= time_ago_in_words_or_date(item.created_at) %>
        </div>
        
