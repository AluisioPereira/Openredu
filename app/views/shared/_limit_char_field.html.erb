<%# Partial utilizado para limitar e mostrar a quantidade de caracteres de um campo. %>
<%# locals => { class_textarea => class do campo html que deve ter a quantidade de chars limitada } %>

<% limit = AppConfig.desc_char_limit %>
<script type="text/javascript">

$(document).ready(function(){
 	$('.<%= class_textarea %>').keyup(function(){
  limitChars('<%= class_textarea %>', <%=AppConfig.desc_char_limit %>, 'char-<%= class_textarea %>');
  })

	<%# Setando a quantidade inicial de texto (para os casos de erro de validaÃ§ao [redirect])%>
	var text = $('.<%= class_textarea %>').val()
	$('.char-<%= class_textarea %>').html('(' + (<%= limit %> - text.length) + ')')
 });
</script>

<div class="char-<%= class_textarea %>" style="text-align:right;">(<%= limit %>)</div>