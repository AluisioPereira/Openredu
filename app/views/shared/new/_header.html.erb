<div id="header" class="container_16">
    <h1 id="logo" class="grid_3"><a href="<%=application_url%>" class="replacement">Redu - Rede Social Educacional</a></h1>
    <div id="global-nav" class="grid_6">
        <ul class="clearfix">
	    <li class="item-1">
	        <a href="<%=application_url%>">Início</a>
	    </li>
	    <li class="item-2 selected">
			<%= link_to "Aprenda", learn_index_path %>
	    </li>
	    <li class="item-3">
		<%= link_to "Ensine", teach_index_path %>	
		</li>
		<li class="item-4"><a href="<%= schools_path %>">Redes</a></li>
	    </ul>
    </div>
    <div id="global-search" class="grid_5">
        <form action="" id="search">
            <div class="searchbox">
            <input type="text" name="search" />
            <input type="submit" value="Buscar" class="replacement" onclick="alert('No momento esta opção está desabilitada.\n Ela ficará disponível na versão pública do Redu.'); return false;" />
            </div>
        </form>
    </div>
    
    <div class="user-actions grid_2">
	<% if current_user %>
		<a href="#user-settings" class="pandora closed"><%= current_user.first_name[0..14] %>
		<%= image_tag "icons/bullet_arrow_down.png", :style => "float: right; position: relative; margin-top: 3px;" %></a>
		
			<div id="user-settings" class="option hide">
			<ul>
			<li>
			<a href="<%=user_path(current_user)%>">Meu Perfil</a>
			<%= link_to "editar", edit_user_path(current_user), :class => "icon more", :style=>"margin-left: 7px;"%>
			</li>
			<li style="border-bottom:1px solid #DDDDDD;">
				
			</li>
			<!--
			<hr/>
			-->
			<% if current_user.admin? %>
			<li>
				<a href="<%= admin_dashboard_path %>" style="color: red;">Admin</a>
			</li>
			<% end %>
			<li>
			<%= link_to "Mensagens ("+current_user.unread_message_count.to_s+")", user_messages_path(:user_id => current_user.id) %>
			</li>
			<li>
			<%= link_to 'Favoritos', user_favorites_path(:user_id => current_user.id) %>
			</li>
			 <% unless AppConfig.closed_beta_mode %>
			<li>
			<%= link_to "Convidar", invite_user_path(current_user) %>
			</li>
			<% end %>
			<li>
			<a href="<%=logout_path%>">Sair</a>
			</li>
		</ul>
		</div>
	<% else %>
		<a href="#user-login" class="pandora closed">Login</a>
		<div id="user-login" class="option hide">
			<% @user_session = UserSession.new %>
			<% form_for @user_session, :url => sessions_path do |f| %>
			<label for='username'>
                <%=:username_or_email.l %>
            </label>
            <%= f.text_field :login, :size => 35 %>
            <label for='username'>
                <%=:password.l %>
            </label>
            <%= f.password_field :password, :size => 35 %>
            <label for='remember_me'>
                <%=:remember_me.l %>
                <%= f.check_box :remember_me %>
            </label>
            <%= f.submit "Entrar" %>
						<% unless Rails.env == 'production' %>
						<% form_tag({:controller => :users, :action => :create}, {:method => :post}) do %>
							<%= oauth_login_button :value => "Login with Twitter", :class => "twitter" %>
						 <% end %>
 						<% end %>
            <% end %>
			
			
			
		</div>
	<% end %>

</div><!-- end header -->       
    </div>

