



<% thumb_url = @course.thumb_url %>

<% url = application_url[0..application_url.length-2] + request.request_uri %>

<div class="share-outter">
                         

		<%= link_to_function "Compartilhar", "jQuery('div.share-inner').slideToggle()", :class => "share_video" %>


		<div class="share-inner hoverdiv">
			
		<% twitter_url = "http://www.twitter.com/?status=#{@course.name}: #{url} via redu.com.br" %>
	<% twitter_url = URI.escape(twitter_url) %>
	
	<a href="<%=twitter_url%>" target="_blank">
    <img src="/images/socialite/twitter_16.png" alt="Twitter" title="Twitter"></a>
	
	 <% promote_url = "http://promote.orkut.com/preview?nt=orkut.com&tt=#{@course.name}&du=#{url}" %>
	<% if thumb_url %>
	  <% promote_url = promote_url + "&tn=#{thumb_url}" %>
	 <% end %>
	 
	<a href="<%=promote_url%>" target="_blank">
    <img src="/images/socialite/orkut_16.png" alt="Orkut" title="Orkut"></a>
	
	<a href="http://www.facebook.com/share.php?u=<%=url%>" target="_blank">
	<img src="/images/socialite/facebook_16.png" title="Facebook"></a>
	
	
	<a href="http://www.digg.com/submit?url=<%=url%>&title=<%=@course.name%>" target="_blank">
	<img src="/images/socialite/digg_16.png" alt="Digg" title="Digg"></a>
	
	<a href="http://www.delicious.com/post?url=<%=url%>&title=<%=@course.name%>" target="_blank">
	<img src="/images/socialite/delicious_16.png" title="Delicious"></a>
	
	<a href="mailto:?subject=<%=@course.name%>&body=<%=@course.name%>: <%=url%>" target="_blank">
	<img src="/images/socialite/email_16.png" title="E-mail"></a>
					 
		</div>
</div>
