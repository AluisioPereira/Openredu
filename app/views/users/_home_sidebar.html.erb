<%# Sidebar da home do usuário. Locals: user %>
<div class="sidebar alpha grid_3">
  <div class="image-frame">
    <%= image_tag current_user.avatar.url(:thumb_120),
      :alt => 'profile', :width => 120, :height => 120 %>
  </div>

  <ul class="local-nav">
    <li>
      <div class="<%= (current_page? home_user_path(current_user)) ?
        "session selected".to_s : "session".to_s %>">
        <% selected = (current_page? home_user_path(current_user)) ?
                       "icon-home-white_16_16" : "icon-home-lightblue_16_16"
                       %>
      <%= link_to current_user.display_name, home_user_path(current_user),
        :class => "icon #{selected}" %>
      </div>
    </li>
    <li>
      <div class="<%= (current_page? user_messages_path(current_user)) ?
        "session selected".to_s : "session".to_s %>">
        <%
          if current_user.unread_message_count > 0
            unread_message_count = "(+#{current_user.unread_message_count})"
          end
        %>
        <%
          selected = (current_page? user_messages_path(current_user)) ?
          "icon-message-white_16_16" : "icon-message-lightblue_16_16"
        %>
        <%= link_to "Mensagens #{unread_message_count}",
          user_messages_path(current_user),
          :class => "icon #{selected}" %>
      </div>
    </li>
    <li>
      <div class="<%= (current_page? mural_user_path(current_user)) ?
        "session selected".to_s : "session".to_s %>">
        <%
          selected = (current_page? mural_user_path(current_user)) ?
          "icon-list-white_16_16" : "icon-list-lightblue_16_16"
        %>
        <%= link_to 'Meu Mural', mural_user_path(current_user),
          :class => "icon #{selected}" %>
      </div>
    </li>
    <%= render :partial => 'users/sidebar_environment_item',
      :collection => current_user.environments, :as => :environment %>
    <li>
      <div class="<%= (current_page? edit_user_path(current_user)) ?
        "session selected".to_s : "session".to_s %>">
        <%
          selected = (current_page? edit_user_path(current_user)) ?
          "icon-management-white_16_16" : "icon-management-lightblue_16_16"
        %>
        <%= link_to 'Configurações', edit_user_path(current_user),
          :class => "icon #{selected}" %>
      </div>
    </li>
    <li>
      <div class="<%= (current_page? user_friendships_path(current_user)) ?
        "session selected".to_s : "session".to_s %>">
        <%
          selected = (current_page? user_friendships_path(current_user)) ?
          "icon-contacts-white_16_16" : "icon-contacts-lightblue_16_16"
        %>
        <%= link_to 'Contatos', user_friendships_path(current_user),
          :class => "icon #{selected}" %>
      </div>
      <ul class="connections clearfix">
        <%= render :partial => 'users/item_short',
          :collection => current_user.recently_active_friends %>
      </ul><!-- end .connections -->
      <%= link_to 'Ver mais', user_friendships_path(current_user),
        :class => 'more' %>
    </li>
  </ul><!-- end .local-nav -->
</div>

