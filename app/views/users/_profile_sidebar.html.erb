<div class="sidebar alpha grid_3">
  <div class="image-frame ">
    <%= image_tag @user.avatar.url(:thumb_120), :alt => 'user' %>
  </div>

  <ul class="local-nav">
    <li>
      <div class="<%= (current_page? user_path(@user)) ?
                       "session selected".to_s : "session".to_s %>">
        <% selected = (current_page? user_path(@user)) ? "icon-profile-white_16_16" : "icon-profile-lightblue_16_16" %>
        <%= link_to "Perfil: #{@user.first_name}", user_path(@user),
        :class => "icon #{selected}" %>
      </div>
     </li>
    <li>
      <div class="<%= (current_page? user_friendships_path(@user)) ?
                       "session selected".to_s : "session".to_s %>">
        <% selected = (current_page? user_friendships_path(@user)) ? "icon-contacts-white_16_16" : "icon-contacts-lightblue_16_16" %>
        <%= link_to 'Contatos', user_friendships_path(@user, :profile => true),
          :class => "icon #{selected}"%>
      </div>
      <ul class="connections clearfix">
        <%= render :partial => 'users/item_short',
          :collection => @user.friends.n_recent(9) %>
      </ul><!-- end .connections -->
      <%= link_to 'Ver mais', user_friendships_path(@user, :profile => true),
          :class => "more"%>
    </li>
  </ul><!-- end .local-nav -->
  <% friendship = current_user.friendship_for @user %>
