<div class="grid_16">
<div id="title_video">Convidar</div>
</div>

<div class="grid_9">
	<% form_for :invitation, :url => user_invitations_path(:user_id => @user.id ) do |f|%>
		<% field_set_tag 'Contatos' do %>
		<label for='email_addresses'>
        <%=:enter_e_mail_addresses.l %>
        <span class="snippet"> <%=:comma_separated.l%></span>
      </label>
      <%= f.text_area :email_addresses , :rows => "5" %>
      <label for='message'>
          <%=:write_a_message.l %>
      </label>
      <%= f.text_area :message, :value => "Olá gostaria te de convidar para participar do Redu!", :rows => "5" %>
		<div style="width: 100%">
			<%= submit_tag :send_invitations.l %>
          <%=:or.l %>
          <%= link_to :cancel.l, user_path(@user) %>
		</div>
	<%end%>
	<%end%>
</div>

<div class="grid_6 ">
    <div class="y_addinfo">
        <div class="addinfocontent">
            <h1>Convide seus amigos!</h1>
            <p>
                Quanto mais pessoas você convida, melhor o Redu se torna.
            </p>
            <p>
                As pessoas que se cadastrarem através de seu convite serão automaticamente seus seguidores.
            </p>
        </div>
    </div>
		<div class="y_addinfo">
        <div class="addinfocontent">
            <h1>Importar contatos</h1>
						<p>
								Clique aqui
								<a href="#" onclick="showPlaxoABChooser('invitation_email_addresses', '/base/plaxo'); return false;">
								<img src="http://www.plaxo.com/images/abc/buttons/add_button.gif" alt="<%=:add_from_my_address_book.l%>" border="0">
								</a> para importar endereços da sua lista de contatos (GMail, Yahoo, AOL, etc).
						</p>
        </div>
    </div>
</div>
