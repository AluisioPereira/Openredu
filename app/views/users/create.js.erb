var $form = $("#form-sign-up")
<% if @user.errors.empty? %>
  var modal = $("#cadastro");
  var success = $("#cadastro-sucesso");

  modal.removeClass("in");
  modal.hide();
  success.addClass("in");
  success.show();
<% else %>
  var $newForm = $("<%= escape_javascript render 'landing/form_sign_up',
                   :user => @user %>");
  $form.replaceWith($newForm);
<% end %>
