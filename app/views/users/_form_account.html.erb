<% form_for @user, :html => {:multipart =>true, :class => "common"}  do |f|  %>
  <%= f.error_messages %>

  <% field_set_tag do %>
    <%= f.label "Configurações:" %>
    <% field_set_tag nil, :class => 'inline' do %>
      <%= f.check_box :auto_status %>
      <%= f.label :auto_status, "Logar atividades automaticamente" %>
    <% end %>

    <%= f.label "Notificações por e-mail:" %>
    <% field_set_tag nil, :class => "inline" do %>
      <%= f.check_box :notify_community_news %>
      <%= f.label :notify_community_news, "Novidades do Redu" %>
      <%= f.check_box :notify_messages %>
      <%= f.label :notify_messages, "Mensagens recebidas" %>
      <%= f.check_box :notify_followships %>
      <%= f.label :notify_followships, "Novos seguidores" %>
    <% end %>

    <% f.fields_for :settings do |builder| %>
      <%= builder.label "Quem pode ver o meu mural:" %>
      <% field_set_tag nil, :class => "inline" do %>
        <%= builder.radio_button :view_mural, Privacy[:public].id,
          { :checked => @user.settings.view_mural.eql?(Privacy[:public]) ?
              true : false } %>
        Todos no Redu
        <%= builder.radio_button :view_mural, Privacy[:friends].id,
          { :checked => @user.settings.view_mural.eql?(Privacy[:friends]) ?
              true : false } %>
        Apenas amigos
      <% end %>
    <% end %>
  <% end %>

  <% field_set_tag "Redefinir E-mail", :class => "wide legend" do %>
    <%= f.label :email, "E-mail:" %>
    <%=  f.text_field :email %>

    <%= f.label :email_confirmation, "Confirmação:",
      :style => "display: none;" %>
    <%=  f.text_field :email_confirmation, :style => "display: none;" %>
  <% end %>

  <% field_set_tag "Redefinir Senha", :class => "wide legend" do %>
    <%= label_tag :current_password, "Senha atual:" %>
    <% if @flag %>
      <%=  password_field_tag :current_password, nil %>
    <% else %>
      <%= @current_password %>
      <%=  password_field_tag :current_password %>
    <% end %>

    <%= f.label :password, "Nova senha:" %>
    <%=  f.password_field :password %>
    <%= f.label :password_confirmation, "Confirmação:" %>
    <%=  f.password_field :password_confirmation %>
  <% end %>

  <%= f.submit t( :save_changes ) %>
  <%= link_to "Remover", @user, :confirm => "Você tem certeza que remover a sua conta do Redu? Todo o seu material criado será removido de forma irreversível.",
    :method => :delete, :class => 'vanilla remove' %>
<% end %>
