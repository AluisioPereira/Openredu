<div id='password-form'>
  <%= form_for @recovery_email, :url => { :action => 'forgot_password', :method => 'post' }, :remote => true, :html => { :class => 'concave-form' } do |f| %>
    <fieldset class='body-login'>
      <h2 class='forgot-password '>Esqueceu a <q class='name-password'>Senha</q> ?</h2>
      <h3 class='call'>Ao requisitar a recuperação de senha, a sua antiga deixará de existir e uma nova será gerada.</h3>
      <div class='confirmation-msg' id='recovered-password' style='display:none'>
            <h2 class='aba-top'></h2>
            <h3 class='text-confirmation' id='password-text'></h3>
      </div>
      <div class='login-box' id='login-box'>
        <strong class='appear-tiptip icon-interrog-blue_12_12-before tiptip-lite' title ='Este endereço de e-mail deve ser o mesmo que você cadastrou no Redu. Mantenha-o atualizado.'></strong>
        <%= f.label 'recover_mail', 'E-mail:', :class => 'input-email' %>
        <%= f.text_field 'email', :value => 'Digite o seu endereço de e-mail cadastrado no Redu', :class => 'concave-input registered-email' %>
        <%= concave_errors_for @recovery_email, :email %>
      </div>
      <%= submit_tag 'Enviar', :class => 'concave-button', :id => 'password' %>
    </fieldset>
  <% end %>
</div>
