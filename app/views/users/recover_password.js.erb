var $form = $("#password-form");
<% if @recovery_email.valid? %>
  $("#login-box").hide();
  $("#recovered-password").show();
  var email = '<%= @recovery_email.email %>'
  $("#client-email2").text(email);
  $(".concave-button#password").hide();
<% else %>
  var email_form = "<%= escape_javascript render :partial => 'recover_password_form', :locals => { :email => @recovery_email } %>"
  $("#password-form").replaceWith(email_form);
  $("#password-form").show();
<% end %>
