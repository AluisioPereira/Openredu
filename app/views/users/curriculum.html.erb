<div class="span3">
  <%= render :partial => "users/left_sidebar",
    :locals => { :user => @user } %>
</div>
<div class="span10">
  <div class="content-area">
    <%= render :partial => "users/breadcrumb_configurations",
      :locals => { :user => @user } %>
    <div class="content-body">
      <div class="content-section">
        <%# Cabeçalho %>
        <ul class="header-breadcrumb">
          <li class="header-breadcrumb-item">
            <%= link_to "Configurações", edit_user_path(@user),
               :class => "header-bradcrumb-link icon-manage-gray_32_34-before",
               :title => "Configurações" %>
          </li>
          <li class="header-breadcrumb-item">
            <%= link_to "Perfil", edit_user_path(@user),
               :class => "header-bradcrumb-link",
               :title => "Perfil" %>
          </li>
        </ul>
      </div>
      <%# Abas e sub-abas %>
      <%= new_tabs(:new_users) %>
      <%# TODO: Remover quando estiver integrado ao simple-navigation %>
      <div class="tab-buttons">
        <%= link_to "Biografia", edit_user_path(@user),
          :title => "Biografia",
          :class => "tab-button icon-biography_16_18-before" %>
        <%= link_to "Currículo", curriculum_user_path(@user),
          :title => "Currículo",
          :class => "tab-button tab-button-active icon-curriculum_16_18-before" %>
      </div>

      <hr class="list-separator">

      <div id="curriculum">

        <div class="curriculum-container experience">
          <h4 class="config-title icon-curriculum-professional-lightblue_32_34-before">Experiência profissional</h4>

          <ul class="experiences">
            <%= render :partial => 'experiences/item',
              :collection => @experiences %>
          </ul>

          <%= render :partial => 'experiences/form', :locals => {
              :user => @user, :experience => @experience, :experiences_count => @experiences.length } %>

          <div class="config-new-item">
            <button class="button-default new-experience-button icon-curriculum-lightblue_16_18-before">Adicionar novo item</button>
          </div>
        </div>

        <hr class="list-separator">

        <div class="curriculum-container education">
          <h4 class="config-title icon-curriculum-academic-lightblue_32_34-before">Experiência acadêmica</h4>

          <ul class="educations">
            <%= render :partial => "educations/item",
                  :collection => @educations %>
          </ul>

          <%= render :partial => 'educations/form', :locals => {
              :high_school => @high_school, :higher_education => @higher_education,
              :complementary_course => @complementary_course,
              :event_education => @event_education, :user => @user }%>

          <div class="config-new-item">
            <buttton class="button-default new-education-button icon-curriculum-lightblue_16_18-before">Adicionar novo item</buttton>
          </div>
        </div>

      </div>

    </div>
    <%= render :partial => "users/breadcrumb_configurations",
      :locals => { :user => @user } %>
  </div>
</div>
<div class="span3">
  <%= render :partial => "users/sidebar_curriculum",
    :locals => { :user => @user } %>
</div>