	<% field_set_tag "Sobre" do %>
		<%= label_tag :description, "Fale sobre você", :size => "60x3" %>
		<em><%= "Escreva sobre o que você gosta de estudar, as áreas de interesse e conhecimento" %></em>
		<%= f.text_area :description, :rows => "3", :cols => "60"  %>

		<%= label_tag :tag_list, :tags.l %>
		<%= text_field_tag 'tag_list', @user.tag_list%>
		
		
	<% end %>

	<%= f.submit :save_changes.l, :style => "float: right;" %> 
	
	<% end %>