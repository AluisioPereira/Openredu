
	
	<% form_for @user, :html => {:multipart =>true}  do |f|  %>
	<%= f.error_messages %>	
	
	<% field_set_tag :profile_photo.l do %>
		<%= image_tag @user.avatar.url(:thumb) %>

		<%= label_tag :avatar, :choose_a_photo_for_your_profile.l %>
		<%= f.file_field :avatar %>
		
		<%= submit_tag :save_changes.l %>
	<% end %>

	<% field_set_tag "Dados pessoais" do %>
		<%= label_tag :first_name, "Nome" %>
		<%= f.text_field :first_name %>

		<%= label_tag :last_name, "Sobrenome" %>
		<%= f.text_field :last_name %>
		
		<%= label_tag :birthday, "Data de nascimento" %>
		<%= f.date_select :birthday, {:start_year => 1926, :end_year => Time.now.year - 1}%> 
		
		<%= label_tag :user_gender, "Sexo" %>
			<%= label_tag :user_gender_m, :male.l, :class => "inline" %>
			<%= f.radio_button :gender, User::MALE %>
			<%= label_tag :user_gender_f, :female.l, :class => "inline" %>
			<%= f.radio_button :gender, User::FEMALE %>
	<% end %>

<% field_set_tag "Perfil" do %>
<%= label_tag :teacher_profile_0, "Aluno", :class => "inline" %>
<%= f.radio_button :teacher_profile, false %>
<%= label_tag :teacher_profile_1, "Professor", :class => "inline" %>
<%= f.radio_button :teacher_profile, true %>
<% end %>


