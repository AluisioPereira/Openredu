<% form_for @user, :multipart =>true  do |f|  %>
  <%= f.error_messages %>

  <% field_set_tag "Configurações" do %>
    <div>
      <%= f.check_box :auto_status %>
      <%= label_tag :auto_status, "Logar atividades automaticamente", :class => "inline" %>
    </div>
  <% end %>

  <% field_set_tag "Notificações por e-mail" do %>
    <div>
      <%= f.check_box :notify_community_news %>
      <%= label_tag :notify_community_news, "Novidades do Redu",
        :class => "inline" %>
    </div>
    <div>
      <%= f.check_box :notify_messages %>
      <%= label_tag :notify_messages, "Mensagens recebida", :class => "inline" %>
    </div>
    <div>
      <%= f.check_box :notify_followships %>
      <%= label_tag :notify_followships, "Novos seguidores", :class => "inline" %>
    </div>
  <% end %>

  <% field_set_tag "Redefinir Senha" do %>
    <div id="current">
      <%= f.label "Senha Atual" %>

      <% if @flag%>
        <%=  password_field_tag :current_password, nil, :style => "background-color: #FEEFB3"  %>
      <% else %>
        <%= @current_password%>
        <%=  password_field_tag :current_password %>
      <% end %>
    </div>

    <div id="modify">
      <%= f.label "Digite a nova senha" %>
      <%=  f.password_field :password %>
      <%= f.label "Digite novamente" %>
      <%=  f.password_field :password_confirmation %>
    </div>
  <% end %>

  <% field_set_tag "Sair do Redu" do %>
    <%= link_to "Remover Usuário", @user, :confirm => "Você tem certeza que deseja sair do Redu? Todo o seu material criado será removido de forma irreversível.", :method => :delete, :style => "color: red;" %>
  <% end %>

  <%= f.submit t(:save_changes), :style => "float: right;" %>
<% end %>
