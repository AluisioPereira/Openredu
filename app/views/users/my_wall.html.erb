<div class="span3">
  <%= render "users/left_sidebar", :user => @user %>
</div>
<div class="span10">
  <div class="content-area">
    <%= render "users/breadcrumb_wall", :user => @user %>
    <div class="content-body">
      <div class="content-section">
        <%= render "bootstrap/header_breadcrumb", :header_breadcrumb_items => [
          { :name => "Meu Mural",
            :link => my_wall_user_path(@user),
            :classes => "icon-wall-gray_32_34-before"
          }
          ] %>
      </div>
      <%= render "statuses/create_status", :status => @status, :statusable => @user,
        :placeholder => "Compartilhe algo com seus Amigos atravÃ©s de seu mural" %>
      <div id="statuses" class="status-list">
        <ol><%= render :partial => "statuses/item", :collection => @statuses %></ol>
        <%= paginate @statuses, :theme => 'endless' %>
      </div>
    </div>
    <%= render "users/breadcrumb_wall", :user => @user %>
  </div>
</div>
<div class="span3">
  <%= render "users/right_sidebar", :user => @user %>
</div>
