<% if course.environment.avatar_file_name %>
  <%= link_to environment_path(course.environment),
    title: course.environment.name, class: "author-thumbnail" do %>
    <%= image_tag course.environment.avatar.url(:thumb_32),
      size: "32x32", alt: course.environment.name %>
  <% end %>
<% else %>
  <%= link_to course.name,
    environment_course_path(course.environment, course),
    class: "text-replacement context-icon icon-course-gray_32_34-before" %>
<% end %>
<%= content_tag :span,
  entity_hierarchy_breacrumb_links(course.environment),
  class: "legend" %>