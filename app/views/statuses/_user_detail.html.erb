    :class => "author-thumbnail", :width => 32, :height => 32 %>
  <%= link_to item.user.display_name, user_path(item.user), :class => "link-name" %>
<% else %>
  <%= image_tag "/images/new/missing_users_thumb_32.png",
    :class => "author-thumbnail", :width => 32, :height => 32 %>
  <span class="link-name">[Usu√°rio Removido]</span>
<% end %>
