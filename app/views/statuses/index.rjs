page.insert_html :bottom, ".activities", :partial => "statuses/type_proxy",
  :collection => @statuses, :as => :status, :locals => {:statusable => :statusable}
if @statuses.size >= 10
  page.replace_html "#endless",
    endless_for(:statuses,
                {:id => @statusable.id,
                  :type => @statusable.class.to_s},
                  params[:page].to_i + 1)
else
  page.replace_html "#endless",  ''
end
