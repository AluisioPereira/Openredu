<li id="status-<%= log.id %>">
  <hr class="list-separator">
  <div class="status">
    <div class="context">
      <% if log.logeable.environment.avatar_file_name %>
        <%= link_to log.logeable.name, environment_course_path(log.logeable.environment, log.logeable) do %>
          <%= image_tag log.logeable.environment.avatar.url(:thumb_32),
            :size => '32x32',
           :class => 'author-thumbnail'
          %>
        <% end %>
      <% else %>
          <%= link_to log.logeable.name, environment_course_path(log.logeable.environment, log.logeable), :class => "text-replacement context-icon icon-course-gray_32_34-before" %>
      <% end %>
      <span class="legend">
        <%= log.logeable.environment.name %> >
      </span>
      <%= link_to log.logeable.name, environment_course_path(log.logeable.environment, log.logeable) %>
    </div>
    <div class="subject">
      <%= render "statuses/user_image", :item => log %>
      <div class="status-icon icon-<%= log.user ? role_at(log.user, log.logeable) : "member" %>-gray_16_18-before">
        <%= render "statuses/user_name", :item => log %>
        <span class="action"> <%= raw auto_link(log.action_text) %></span>
        <%= link_to log.logeable.name, environment_course_path(log.logeable.environment, log.logeable),
          :class => "target icon-course-gray_16_18-before" %>
        <%= render :partial => 'statuses/timeago', :locals => { :item => log } %>
      </div>
    </div>
  </div>
</li>
