<li id="status-<%= log.id %>">
  <hr class="list-separator">
  <div class="status">
    <div class="context">
      <%= link_to log.logeable.name, space_path(log.logeable), :class => "text-replacement context-icon icon-space-gray_32_34-before" %>
      <span class="legend">
        <%= log.logeable.course.environment.name %> >
        <%= log.logeable.course.name %>
      </span>
      <%= link_to log.logeable.name, space_path(log.logeable) %>
    </div>
    <div class="subject">
      <%= render "statuses/user_image", :user => log.user %>
      <div class="status-icon icon-<%= log.user ? role_at(log.user, log.logeable) : "member" %>-gray_16_18-before">
        <%= render "statuses/user_name", :user => log.user %>
        <span class="action"> <%= raw auto_link(log.action_text) %></span>
        <%= link_to log.logeable.name, space_path(log.logeable), :class => "status-secondary icon-space-gray_16_18-before" %>
        <%= render "statuses/timeago", :timestamp => log.created_at %>
      </div>
    </div>
  </div>
</li>

