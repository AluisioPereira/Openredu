<li id="status-<%= log.id %>">
  <hr class="list-separator">
  <div class="status">
    <div class="context">
      <%= link_to log.logeable.name, space_subject_lecture_path(log.logeable.subject.space, log.logeable.subject, log.logeable), :class => "text-replacement context-icon icon-subject-gray_32_34-before" %>
      <span class="legend">
        <%= log.logeable.subject.space.course.environment.name %> >
        <%= log.logeable.subject.name  %> >
        <%= log.logeable.subject.space.name %>
      </span>
      <%= link_to log.logeable.name,space_subject_lecture_path(log.logeable.subject.space, log.logeable.subject, log.logeable) %>
    </div>
    <div class="subject">
      <%= render "statuses/user_image", :item => log %>
      <div class="subject-info icon-<%= log.user ? role_at(log.user, log.logeable) : "member" %>-gray_16_18-before ">
        <%= render "statuses/user_name", :item => log %>
        <span class="action">comentou no mural da aula  <%= link_to log.logeable.name, space_subject_lecture_path(log.logeable.subject.space, log.logeable.subject, log.logeable) %></span>
        <% if can? :manage, log %>
          <%= link_to 'Fechar',
            status_path(item),
            :method => :delete,
            :remote => true,
            :class => 'icon-icon-close icon-small icon-close-gray_16_16 replacement',
            :confirm => 'Ao remover o comentário, todas as respostas serão apagadas. Deseja removê-lo?' %>
      <% end %>
        <%= render :partial => 'statuses/timeago', :locals => { :item => log } %>
      </div>
    </div>
  </div>
</li>