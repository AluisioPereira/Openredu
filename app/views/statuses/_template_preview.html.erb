<div id="template-preview" style="display: none">
  <div class="post-resource">
    <hr class="border-post concave-separator"/>
    <!-- thumbnail -->
    {{ if(obj.first_thumb) { }}
    <div class="thumbnail">
      <img id="thumbnail-0" class="preview-link" src="#" />
      <span class="buttons-thumbnail">
        <!-- multiplos thumbanails -->
        {{ if (obj.thumbnail_url instanceof Array) { }}
        <span class="replacement last control">
          Anterior
          <span class="arrow">A</span>
        </span>
        <span class="replacement next control">
          Próximo
          <span class="arrow">P</span>
        </span>
        {{ } else { }}
        <!-- end multiplos thumbnails -->
        <span class="replacement last control desactivated">
          Anterior
          <span class="arrow">A</span>
        </span>
        <span class="replacement next control desactivated">
          Próximo
          <span class="arrow">P</span>
        </span>
        {{ } }}
        <span class="replacement remove control">
          Remover
          <span class="arrow">R</span>
        </span>
      </span>
    </div>
    {{ } }}
    <!-- end thumbnail -->

    <div class="post-text">
      <span class="close icon-small icon-delete-gray_8_10 replacement">Fechar</span>
      <h3><a href="#" target="_blank" rel="nofollow" class="title">
          {{ if(obj.title) { }}
          {{= title }}
          {{ } }}
      </a></h3>
      <h4 class="source-site">{{= provider_url }}</h4>
      <p class="post-description">
        {{ if(obj.description) { }}
        {{= description }}
        {{ } }}
      </p>
    </div>
    <hr class="border-post concave-separator"/>
  </div>
</div>
