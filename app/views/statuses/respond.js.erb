<% status_id = @answer.in_response_to.id.to_s %>
<% if @answer.valid? %>
  response = "<%=  escape_javascript (render :partial => 'statuses/response', :locals => { :response => @answer }) %>";
  $status = $("#status-<%= status_id %>");

  $status.find(".responses").show();
  $status.find(".create-response").slideUp();
  $status.find(".toggle-statuses .qty").text($status.find(".responses > li").length);
  $status.find("form textarea").val('');
  if ($status.find(".responses > li").length < 5) {
    $(response).insertBefore($status.find(".responses > li:last"));
  }
  else {
    $status.find(".responses > li:last").prev().append(response);
  }
  $status.find(".responses").countComments().groupResponses();
  $status.find(".responses .see-more").exibeComments();
<% end %>

