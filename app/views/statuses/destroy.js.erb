$("#status-<%= @status.id %>").slideUp(150, "swing", function() {
  var $status = $(this);
  var $responses = $status.closest(".responses");

  $status.remove();

  <% if @status.in_response_to_type == "Status" && @status.in_response_to.answers.empty? %>
    $responses.remove();
  <% else %>
    $responses.countComments();
  <% end %>
});