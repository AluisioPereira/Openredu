<%# Links de Favoritar e Desfavoritar  %>
<% if current_user.has_favorite(status) %>
  <%= link_to('Desfavoritar',
              not_favorite_user_favorite_path(current_user, status, :type => status.class.to_s),
              :class => 'icon icon-unfavorite-gray_8_8', :id => "status-#{status.id}-rm_favorites_link",
              :remote => true, :method => :post ) %>

<% else %>
  <%= link_to('Favoritar',
               favorite_user_favorite_path(current_user, status, :type => status.class.to_s),
               :class => 'icon icon-favorite-gray_8_8', :id => "status-#{status.id}-favorites_link",
               :remote => true, :method => :post ) %>
<% end %>
