<li id="status-<%= compound.id %>">
  <hr class="list-separator">
  <div class="status without-context">
    <div class="subject">
      <%= image_tag compound.statusable.avatar.url(:thumb_32),
        :class => "author-thumbnail", :width => 32, :height => 32 %>
      <div class="subject-info">
        <%= link_to "#{compound.statusable.first_name} #{compound.statusable.last_name}",
          user_path(compound.statusable), :class => "link-name" %>
        <span class="action">
          adicionou <%= compound.logs.count %> novas pessoas Ã  sua rede de contatos
        </span>
        <%= render :partial => 'statuses/timeago', :locals => { :item => compound } %>
      </div>
    </div>
    <div class="subject-content">
      <span href="#" class="link-fake see-all link-secondary">+ ver todos</span>
      <ul class="grouping-elements">
        <%= render :partial => "statuses/compound_item",
          :collection => compound.logs.collect {|log| log.logeable.friend },
          :as => :compound_user %>
      </ul>
    </div>
  </div>
</li>
