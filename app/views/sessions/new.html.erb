<div id="all_content3">
    <div id="col_content">
        <div id="breadcrumbs">
            <a href="<%=application_url%>">home</a>
            > login
        </div>
        <div id="title">
            LOGIN
        </div>
        <div>
            <% form_tag sessions_path, :class => 'MainForm' do %>
            <br/>
            <label for='username'>
                <%=:username.l %>
            </label>
            <br/>
            <%= text_field_tag 'login', nil, :size => 35 %>
            <br/>
            <label for='username'>
                <%=:password.l %>
            </label>
            <br/>
            <%= password_field_tag 'password', nil, :size => 35 %>
            <br/>
            <br/>
            <label for='remember_me'>
                <%=:remember_me.l %>
                <%= check_box_tag 'remember_me' %>
            </label>
            <br/>
            <br/>
            <%= submit_tag :log_in.l %>
            <% end %>
            
			<br/>
			<p>
                <%=:dont_have_an_account.l %>
                <br/>
                <%= link_to "&raquo; " + :click_here_to_sign_up.l, "/signup" %>
            </p>
            <p>
                <%=:forgot_your_password.l %>
                <br/>
                <%= link_to "&raquo; " + :click_here_to_retrieve_it.l, forgot_password_url %>
            </p>
            <p>
                <%=:forgot_your_username.l %>
                <br/>
                <%= link_to "&raquo; " + :click_here_to_retrieve_it.l, forgot_username_url %>
            </p>
        </div>
    </div>
</div>
