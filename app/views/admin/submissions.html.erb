
<div class="grid_16">
<div id="breadcrumbs">
	<a href="#">Administração</a> > Submissões
</div>

<div id="title_video">Moderação de Submissões</div>
</div>

<div class="main grid_16">
    <div class="fake-tabs grid_16 alpha omega">
        <%= render :partial => "admin/taskbar" %>
        <div class="panel">
        	
					<h3>Mostrando submissões mais antigas</h3>
					
					 <div id="all_list">
    	
		<% if @lectures && @lectures.size > 0 %>
		 <% form_tag :action => :moderate_submissions do %>
			<table style="width: 100%; margin: 15px 10px 20px 10px;" class="common">
				<tr>
					<th style="max-width:25px;">Aprovar</th><th style="max-width:27px;">Rejeitar</th><th>Aula</th><th>Autor</th><th>Data</th>
				</tr>
		 	<% for lecture in @lectures %>
				<tr>
					<tr>
						<td><%= radio_button_tag '[lecture]['+ lecture.id.to_s+']', 'approve'  %></td>
						<td><%= radio_button_tag '[lecture]['+ lecture.id.to_s+']', 'reject' %></td>
						<td><%= link_to lecture.name, lecture_path(lecture), :target => "_blank" %> </td>
						<td><%= lecture.owner.display_name %> </td>
						<td><%= time_ago_in_words(lecture.updated_at) %> </td>
					</tr>
				</tr>
 			<% end %>
			</table>
			<%= submit_tag "Moderar" %>
		 <% end %>
		<% else %>
			
			 <div class="box_notice">Não há submissões a serem moderadas.</div>
			
 			
		<% end %>
    	
    </div> <!-- fim da listagem --> 
	
	<div id="pagination" align="center" class="pagination">

		<%= will_paginate  @lectures, :params => {:sort_by => @sort_by}, :class => "pagination_number"  %>
		
    </div>
					
					
					
				</div>
    </div> <!-- end tabs -->
</div><!-- end main -->

