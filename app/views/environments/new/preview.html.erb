<%= render :partial => 'environments/new/preview_sidebar' %>

<div class="main grid_12 omega big-col">
  <%= render :partial => "environments/new/breadcrumbs", :locals => { :environment => @environment } %>
  <%= render :partial => 'environments/new/header',
        :locals => { :environment => @environment } %>

  <div id="environment-preview" class="hierarchy-preview body">
    <div class="header">
      <h4>Pré-visualização</h4>
    </div>

    <h3 class="call icon icon-course-lightblue_16_16">Cursos</h3>
    <span class="count">
      (<%= pluralize(@environment.courses.length, 'disciplina') + " " +
       (pluralize @environment.courses.length,'disponível').split(' ')[1] %>)
    </span>

    <ul class="preview-listing courses">
      <%= render :partial => 'courses/new/item_short',
        :collection => @environment.courses %>
    </ul>

    <%# FIXME Colocar listagem de notícias (ver front-end) %>
  </div><!-- end #environment-courses -->

</div><!-- end .main -->
