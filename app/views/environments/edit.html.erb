<script type="text/javascript">
  $(document).ready(function(){
    $("input[type=text][name*=color]").val("<%= @environment.color if @environment %>")
    $("input[type=text][name*=color]").css('background-color' , "#<%= @environment.color %>")
  })
</script>
<%= apply_color_picker_to "#environment_color" %>
<div class="grid_16">
  <div class="fake-tabs grid_16 alpha omega">
    <%= render :partial => 'environments/admin_taskbar' %>
    <div class="panel">
      <h1>Configurações do Ambiente de Ensino</h1>

      <% form_for @environment, :html => { :multipart => true } do |f| %>
        <%= f.error_messages %>
        <% field_set_tag "Informações Gerais" do %>
          <%= f.label :name, "Nome" %>
          <%= f.text_field :name  %>
          <%= f.label :initials, "Sigla" %>
          <%= f.text_field :initials  %>
          <%= f.label :description, "Description" %>
          <%= f.text_area :description, :size=>'102x4' %>
          <%= f.label raw("Palavras-chave <span class='snippet'>(separadas por vírgula)</span>") %>
          <%= f.text_field :tag_list %>
        <% end %>
        <% field_set_tag "Aparência" do %>
          <%= f.label :avatar, "Imagem" %>
          <%= f.file_field :avatar %>
          <%= f.submit "Alterar!" %>
        <% end %>
      <% end %>
      <% field_set_tag "Remover ambiente", :class => "fake" do %>
        <%= link_to "Deletar ambiente", environment_path(@environment),
          :confirm => "Você tem certeza que deseja remover este ambiente?",
          :method => :delete %>
      <% end %>
    </div><!-- end config. -->
  </div>
</div>
