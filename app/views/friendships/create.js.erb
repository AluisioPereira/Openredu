<% if !@show_user %>
  $("#requisition-<%= @friend.id %>").slideToggle();
<% end %>

<% if current_user.friends? @friend %>
  if (chat) {
    chat.subscribePresence("<%= @friend.presence_channel %>");
  }
<% else %>
  var link = "<%= escape_javascript( link_to 'Aguardando aceitação', nil, :class => 'waiting' ) %>"
  $('.new_friendship').after(link);
<% end %>

$('.new_friendship').remove();
