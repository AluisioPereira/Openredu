<% if @recommendation %>
  $("#recommendation-<%= @friend.id %>").slideUp();
  var new_recommendation = "<%= escape_javascript render :partial => 'users/recommendation_item',
    :collection => current_user.recommended_contacts(1) %>"
  $(".contact-recommendations > ul").append(new_recommendation);
<% elsif !@show_user %>
  $("#requisition-<%= @friend.id %>").slideToggle();
<% end %>

<% if current_user.friends? @friend %>
  if (chat) {
    chat.subscribePresence("<%= @friend.presence_channel %>");
    chat.subscribePrivate("<%= current_user.private_channel_with(@friend) %>");
  }
<% else %>
  var link = "<%= escape_javascript( link_to 'Aguardando aceitação', nil, :class => 'waiting' ) %>"
  $('.new_friendship').after(link);
<% end %>

$('.new_friendship').remove();
