<div class="span3">
  <%= render :partial => "users/left_sidebar",
     :locals => { :user => @user } %>
</div>
<div class="span10">
  <div class="content-area">
    <%= render :partial => "friendships/breadcrumb",
       :locals => { :user => @user } %>
    <div class="content-body">
      <div class="content-section">
        <ul class="header-breadcrumb">
          <li class="header-breadcrumb-item">
            <%= link_to "Meus Contatos", user_friendships_path(@user),
               :class => "header-bradcrumb-link icon-connections-gray_32_34-before",
               :title => "Meus Contatos" %>
          </li>
          <li class="header-breadcrumb-item">
            <%= link_to user_friendships_path(@user),
              :class => "header-bradcrumb-link",
              :title => "Amigos" do %>
                Amigos <%= content_tag(:span, parentize(@total_friends),
                         :class => "header-breadcrumb-item-light") %>
              <% end %>
          </li>
        </ul>
        <%= link_to "Convidar amigos", new_user_friendship_path(@user), :class => "button-primary icon-invite-white_blue_16_18-before pull-right" %>
      </div>
      <%= new_tabs(:new_users) do %>
      <% end %>
      <div class="row">
        <div class="span10">
          <div class="content-section">
            <ul class="list-2-columns list-columns-separator friendship-list">
              <%= render :partial => "users/item_medium", :collection => @friends %>
            </ul>
          </div>
        </div>
      </div>
      <hr class="list-separator">
      <div class="content-section">
        <div class="pagination">
          <a href="#" class="button-default" title="1">1</a>
          <a href="#" class="button-default" title="2">2</a>
          <a href="#" class="button-default" title="3">3</a>
          <a href="#" class="button-default" title="4">4</a>
        </div>
      </div>
    </div>
    <%= render :partial => "friendships/breadcrumb",
       :locals => { :user => @user } %>
  </div>
</div>
<div class="span3">
  <%= render :partial => "users/right_sidebar",
     :locals => { :user => @user } %>
</div>