<div class="span3">
  <%= render :partial => "users/left_sidebar",
     :locals => { :user => @user } %>
</div>
<div class="span10">
  <div class="content-area">
    <%= render :partial => "messages/breadcrumb",
       :locals => { :user => @user } %>
    <div class="content-body">
      <div class="content-section">
        <ul class="header-breadcrumb">
          <li class="header-breadcrumb-item">
            <%= link_to "Mensagens", user_messages_path(@user),
               :class => "header-bradcrumb-link icon-message-gray_32_34-before",
               :title => "Mensagens" %>
          </li>
          <li class="header-breadcrumb-item">
            <%= link_to user_messages_path(@user),
               :class => "header-bradcrumb-link",
               :title => "Recebidas" do %>
               Recebidas <%= content_tag(:span, parentize(@total_messages),
                           :class => "header-breadcrumb-item-light") %>
              <% end %>
          </li>
        </ul>
        <%= link_to "Nova Mensagem", "#modal-new-message", :class => "button-primary icon-message-new-white_blue_16_18-before button-new-message", "data-toggle" => "modal" %>
        <div id="modal-new-message" class="modal hide">
          <div class="modal-header">
            <h3 class="modal-title">Nova Mensagem</h3>
          </div>
          <div class="modal-body">  
            <%= render :partial => 'messages/form',
              :locals => { :message => @message, :user => @user } %>
          </div>
          <div class="modal-footer">
            <button data-dismiss="modal" class="button-default">Cancelar</button>
            <button data-dismiss="modal" class="button-primary">Enviar</button>
          </div>
        </div>
      </div>
      <%= new_tabs(:new_users) do %>
      <% end %>
      <%= render :partial => 'messages/index',
         :locals => { :mailbox => :inbox, :messages => @messages,
         :user => @user } %>
    </div>
    <%= render :partial => "messages/breadcrumb",
       :locals => { :user => @user } %>
  </div>
</div>
<div class="span3">
  <%= render :partial => "users/right_sidebar",
     :locals => { :user => @user } %>
</div>
