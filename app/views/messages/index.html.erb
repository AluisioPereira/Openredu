<div class="span3">
  <%= render :partial => "users/left_sidebar",
     :locals => { :user => @user } %>
</div>
<div class="span10">
  <div class="content-area">
    <%= render :partial => "messages/breadcrumb",
       :locals => { :user => @user } %>
    <div class="content-body">
      <div class="content-section">
        <ul class="header-breadcrumb">
          <li class="header-breadcrumb-item">
            <%= link_to "Mensagens", user_messages_path(@user),
               :class => "header-bradcrumb-link icon-message-gray_32_34-before",
               :title => "Mensagens" %>
          </li>
          <li class="header-breadcrumb-item">
            <%= link_to user_messages_path(@user),
               :class => "header-bradcrumb-link",
               :title => "Recebidas" do %>
               Recebidas <%= content_tag(:span, parentize(@messages.count),
                           :class => "header-breadcrumb-item-light") %>
              <% end %>
          </li>
        </ul>
      </div>
      <%= new_tabs(:new_users) do %>
      <% end %>
      <div class="content-section">
        <%= render :partial => 'messages/index',
           :locals => { :mailbox => :inbox, :messages => @messages,
           :user => @user } %>
      </div>
    </div>
    <%= render :partial => "messages/breadcrumb",
       :locals => { :user => @user } %>
  </div>
</div>
<div class="span3">
  <%= render :partial => "users/right_sidebar",
     :locals => { :user => @user } %>
</div>
