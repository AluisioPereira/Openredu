
	<div id='title'>
		<%= :inbox.l %>
	</div>	
	<table border = 0, width = '100%'>
		<tbody>
			<%- if @messages.empty? %>
			<tr>
				<%= :no_messages.l %>
			</tr>
			<%- else %>
				<%- @messages.each do |message| %>
						<%= check_box_tag "delete[]", message.id %>
					<%= link_to image_tag( message.sender.avatar_photo_url(:thumb), "height"=>"50px", "alt"=>"#{message.sender.login}", "width"=>"50px" ), user_path(message.sender), :title => "#{message.sender.login}'s " + :profile.l %>
					<%= link_to h(message.subject), user_message_path(@user, message) %>
					<br>
					<%= :from.l %>
					<%= link_to h(message.sender.login), user_path(message.sender) %>
					<em>
						<%= message.read? ? 'Lida' : 'NÃ£o-Lida' %>
					</em>				
					<%= h message.created_at.to_s(:long) %>
				<% end %>			
			<% end %>
		</tbody>
		<tfoot>
			<tr>
					<%-if @messages.any? %>
						<p>
							<%= submit_tag :delete_selected.l %>
						</p>
					<% end %>
			</tr>
		</tfoot>
	</table>	
	<%= paginating_links @messages if @messages.page_count > 1 %>
