<div class="span3">
  <%= render :partial => "users/left_sidebar",
     :locals => { :user => @user } %>
</div>
<div class="span10">
  <div class="content-area">
    <%= render :partial => "messages/breadcrumb",
       :locals => { :user => @user } %>
    <div class="content-body">
      <ul class="environment-title header-breadcrumb">
        <li class="header-breadcrumb-item">
          <%= link_to "Mensagens", user_messages_path(@user),
             :class => "header-bradcrumb-link icon-sent-message-gray_32_34-before",
             :title => "Mensagens" %>
        </li>
        <li class="header-breadcrumb-item">
          <%= link_to index_sent_user_messages_path(@user),
             :class => "header-bradcrumb-link",
             :title => "Enviadas" do %>
             Enviadas <%= content_tag(:span, parentize(@messages.count), :class => "header-breadcrumb-item-light") %>
            <% end %>
        </li>
      </ul>
      <%= new_tabs(:new_users) do %>
      <% end %>
    </div>
    <%= render :partial => "messages/breadcrumb",
       :locals => { :user => @user } %>
  </div>
</div>
<div class="span3">
  <%= render :partial => "users/right_sidebar",
     :locals => { :user => @user } %>
</div>
