<% content_for :head_scripts_and_styles do %>
  <%= stylesheet_link_tag "fb_style.css" %>
  <%=  javascript_include_tag "jquery.fcbkcomplete.min.js"%>
  <script type="text/javascript">
    $(document).ready(function(){
        $("#message_to").fcbkcomplete({
          json_url: "<%= auto_complete_for_username_user_messages_path %>?format=js",
          addontab: true,
          complete_text: "Digite o nome do amigo...",
          height: 2
          });
        });
  </script>
<% end %>

<% form_for [@user, @reply], :html => { :class => 'common' } do |f| %>
  <div id="errors"></div>
  <%= f.error_messages %>

  <%= f.hidden_field :recipient_id, :value => @reply.to %>
  <%= f.hidden_field :sender_id, :value => @user.id %>

  <%= f.text_field :subject, :style => 'display: none;' %>
  <%= label_tag :message_body, :message.l + ':' %>
  <%= f.text_area :body, :size => "73x10" %>
  <%= submit_tag :send.l %>
  <%= link_to 'Cancelar', nil, { :onclick => "$('div.new-folder-inner').slideToggle(); $('#dummy_reply').show(); return false;", :class => 'cancel'} %>
<% end %>

